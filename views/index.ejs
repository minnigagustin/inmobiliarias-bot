<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  <title><%= COMPANY_NAME %> ‚Äì Chat</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">
  <style>
    @import url('https://api.fontshare.com/v2/css?f[]=general-sans@400,500,600,700&display=swap');

    :root {
      --bg-base: #08080c;
      --bg-chat: #0d0d12;
      --bg-elevated: #141418;
      --bg-bubble-bot: #1a1a22;
      --bg-bubble-user: #d4a853;
      --bg-input: #101014;
      --accent: #d4a853;
      --accent-dim: rgba(212, 168, 83, 0.15);
      --accent-glow: rgba(212, 168, 83, 0.25);
      --text-primary: #fafafa;
      --text-secondary: #a1a1aa;
      --text-muted: #52525b;
      --text-on-accent: #0a0a0f;
      --border: rgba(255, 255, 255, 0.06);
      --success: #22c55e;
      --radius-sm: 8px;
      --radius-md: 14px;
      --radius-lg: 20px;
      --radius-bubble: 18px;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }

    html, body {
      height: 100%;
      font-family: 'General Sans', -apple-system, sans-serif;
      background: var(--bg-base);
      color: var(--text-primary);
      overflow: hidden;
    }

    /* Main container */
    .app {
      height: 100vh;
      height: 100dvh;
      display: flex;
      flex-direction: column;
      max-width: 600px;
      margin: 0 auto;
      background: var(--bg-chat);
      position: relative;
    }

    @media (min-width: 640px) {
      .app {
        margin: 20px auto;
        height: calc(100vh - 40px);
        border-radius: var(--radius-lg);
        border: 1px solid var(--border);
        box-shadow: 0 25px 80px -20px rgba(0, 0, 0, 0.5);
      }
    }

    /* Header */
    .header {
      display: flex;
      align-items: center;
      gap: 14px;
      padding: 16px 20px;
      background: var(--bg-elevated);
      border-bottom: 1px solid var(--border);
      flex-shrink: 0;
    }

    .avatar {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background: var(--accent-dim);
      border: 2px solid var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.3rem;
      position: relative;
    }

    .avatar::after {
      content: '';
      position: absolute;
      bottom: 2px;
      right: 2px;
      width: 10px;
      height: 10px;
      background: var(--success);
      border-radius: 50%;
      border: 2px solid var(--bg-elevated);
    }

    .header-info {
      flex: 1;
    }

    .header-title {
      font-size: 1rem;
      font-weight: 600;
      color: var(--text-primary);
      letter-spacing: -0.01em;
    }

    .header-status {
      font-size: 0.75rem;
      color: var(--success);
      display: flex;
      align-items: center;
      gap: 5px;
      margin-top: 2px;
    }

    .header-actions {
      display: flex;
      gap: 8px;
    }

    .header-btn {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border: 1px solid var(--border);
      background: transparent;
      color: var(--text-secondary);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }

    .header-btn:hover {
      background: var(--accent-dim);
      border-color: var(--accent);
      color: var(--accent);
    }

    /* Messages area */
    #messages {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 16px;
      scroll-behavior: smooth;
    }

    /* Message container */
    .msg {
      display: flex;
      flex-direction: column;
      max-width: 85%;
      animation: msgIn 0.35s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes msgIn {
      from { opacity: 0; transform: translateY(15px) scale(0.98); }
      to { opacity: 1; transform: translateY(0) scale(1); }
    }

    .msg.bot { align-self: flex-start; }
    .msg.user { align-self: flex-end; }
    .msg.agent { align-self: flex-end; }
    .msg.system { align-self: center; max-width: 90%; }

    /* Bubbles */
    .bubble {
      padding: 12px 16px;
      border-radius: var(--radius-bubble);
      line-height: 1.5;
      font-size: 0.95rem;
      word-break: break-word;
      white-space: pre-wrap;
    }

    .msg.bot .bubble {
      background: var(--bg-bubble-bot);
      border: 1px solid var(--border);
      border-bottom-left-radius: 6px;
      color: var(--text-primary);
    }

    .msg.user .bubble {
      background: var(--bg-bubble-user);
      color: var(--text-on-accent);
      border-bottom-right-radius: 6px;
      font-weight: 500;
    }

    .msg.agent .bubble {
      background: linear-gradient(135deg, #22c55e, #16a34a);
      color: white;
      border-bottom-right-radius: 6px;
    }

    .msg.system .bubble {
      background: transparent;
      color: var(--text-muted);
      font-size: 0.85rem;
      text-align: center;
      padding: 8px 16px;
    }

    /* Message time */
    .msg-time {
      font-size: 0.7rem;
      color: var(--text-muted);
      margin-top: 4px;
      padding: 0 4px;
    }

    .msg.user .msg-time,
    .msg.agent .msg-time {
      text-align: right;
    }

    /* Image messages */
    .bubble.image {
      padding: 4px;
      background: transparent;
      border: none;
    }

    .bubble.image img {
      max-width: 260px;
      max-height: 200px;
      border-radius: var(--radius-md);
      display: block;
    }

    /* Typing indicator */
    .msg.typing .bubble {
      background: var(--bg-bubble-bot);
      border: 1px solid var(--border);
      padding: 14px 20px;
      display: flex;
      gap: 4px;
    }

    .typing-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--text-muted);
      animation: typingBounce 1.4s infinite ease-in-out;
    }

    .typing-dot:nth-child(1) { animation-delay: 0s; }
    .typing-dot:nth-child(2) { animation-delay: 0.2s; }
    .typing-dot:nth-child(3) { animation-delay: 0.4s; }

    @keyframes typingBounce {
      0%, 60%, 100% { transform: translateY(0); background: var(--text-muted); }
      30% { transform: translateY(-8px); background: var(--accent); }
    }

    /* Choice buttons */
    .bubble.buttons {
      background: transparent;
      border: none;
      padding: 4px 0;
    }

    .btn-group {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }

    .choice-btn {
      padding: 10px 18px;
      border-radius: 999px;
      border: 1px solid var(--border);
      background: var(--bg-elevated);
      color: var(--text-primary);
      font-family: inherit;
      font-size: 0.9rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
    }

    .choice-btn:hover:not(:disabled) {
      border-color: var(--accent);
      background: var(--accent-dim);
      transform: translateY(-1px);
    }

    .choice-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    .btn-group.used .choice-btn:not(:disabled) {
      opacity: 0.4;
    }

    /* Star rating buttons */
    .choice-btn[data-stars] {
      color: #fbbf24;
      border-color: rgba(251, 191, 36, 0.3);
      background: rgba(251, 191, 36, 0.08);
      letter-spacing: 2px;
    }

    .choice-btn[data-stars]:hover:not(:disabled) {
      background: rgba(251, 191, 36, 0.2);
      border-color: #fbbf24;
    }

    /* Property cards */
    .bubble.prop-cards {
      background: transparent;
      border: none;
      padding: 0;
      max-width: 100%;
    }

    .prop-grid {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .prop-card {
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-radius: var(--radius-md);
      overflow: hidden;
      transition: all 0.25s;
    }

    .prop-card:hover {
      border-color: var(--accent);
      transform: translateY(-2px);
    }

    .prop-img {
      height: 140px;
      background-size: cover;
      background-position: center;
    }

    .prop-img.noimg {
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--bg-bubble-bot);
      color: var(--text-muted);
      font-weight: 600;
    }

    .prop-body { padding: 14px; }
    .prop-title { font-weight: 600; margin-bottom: 4px; }
    .prop-price { color: var(--accent); font-weight: 700; font-size: 1.1rem; }
    .prop-excerpt { color: var(--text-secondary); font-size: 0.85rem; margin-top: 6px; line-height: 1.4; }

    .prop-actions { margin-top: 12px; display: flex; gap: 8px; }

    .prop-link {
      padding: 8px 14px;
      border-radius: 999px;
      background: var(--accent);
      color: var(--text-on-accent);
      text-decoration: none;
      font-weight: 600;
      font-size: 0.85rem;
      transition: all 0.2s;
    }

    .prop-link:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 15px var(--accent-glow);
    }

    /* Input form */
    .input-container {
      padding: 16px 20px;
      background: var(--bg-elevated);
      border-top: 1px solid var(--border);
      flex-shrink: 0;
    }

    #input-form {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .icon-btn {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      border: 1px solid var(--border);
      background: var(--bg-input);
      color: var(--text-secondary);
      font-size: 1.1rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    .icon-btn:hover {
      border-color: var(--accent);
      color: var(--accent);
      background: var(--accent-dim);
    }

    #input {
      flex: 1;
      padding: 14px 18px;
      border-radius: 999px;
      border: 1px solid var(--border);
      background: var(--bg-input);
      color: var(--text-primary);
      font-family: inherit;
      font-size: 0.95rem;
      outline: none;
      transition: all 0.2s;
    }

    #input::placeholder {
      color: var(--text-muted);
    }

    #input:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 3px var(--accent-dim);
    }

    #input-form button[type="submit"] {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      border: none;
      background: var(--accent);
      color: var(--text-on-accent);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    #input-form button[type="submit"]:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 15px var(--accent-glow);
    }

    #input-form button[type="submit"]:active {
      transform: scale(0.98);
    }

    #file-input { display: none; }

    /* Scrollbar */
    #messages::-webkit-scrollbar { width: 6px; }
    #messages::-webkit-scrollbar-track { background: transparent; }
    #messages::-webkit-scrollbar-thumb { background: var(--border); border-radius: 3px; }
    #messages::-webkit-scrollbar-thumb:hover { background: var(--text-muted); }

    /* Dialog */
    dialog#nameDialog {
      background: var(--bg-elevated);
      border: 1px solid var(--border);
      border-radius: var(--radius-lg);
      color: var(--text-primary);
      padding: 24px;
      max-width: 360px;
    }

    dialog::backdrop {
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(4px);
    }

    /* Welcome animation */
    .welcome-animation {
      text-align: center;
      padding: 40px 20px;
      animation: fadeIn 0.5s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .welcome-animation .emoji {
      font-size: 3rem;
      margin-bottom: 16px;
      animation: wave 1.5s ease-in-out infinite;
    }

    @keyframes wave {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(20deg); }
      75% { transform: rotate(-15deg); }
    }

    /* Grain overlay */
    .app::before {
      content: '';
      position: absolute;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
      opacity: 0.015;
      pointer-events: none;
      z-index: 0;
      border-radius: inherit;
    }

    .header, #messages, .input-container {
      position: relative;
      z-index: 1;
    }
  </style>
</head>
<body>
  <div class="app">
    <header class="header">
      <div class="avatar">ü§ñ</div>
      <div class="header-info">
        <div class="header-title">Asistente <%= COMPANY_NAME %></div>
        <div class="header-status">
          <span>‚óè</span> En l√≠nea
        </div>
      </div>
    </header>

    <main id="messages"></main>

    <div class="input-container">
      <form id="input-form">
        <button type="button" id="attach-btn" class="icon-btn" title="Enviar foto" aria-label="Enviar foto">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21 15 16 10 5 21"/>
          </svg>
        </button>
        <input id="file-input" type="file" accept="image/*" multiple hidden />
        <input id="input" autocomplete="off" placeholder="Escrib√≠ tu mensaje‚Ä¶" />
        <button type="submit" title="Enviar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <line x1="22" y1="2" x2="11" y2="13"/>
            <polygon points="22 2 15 22 11 13 2 9 22 2"/>
          </svg>
        </button>
      </form>
    </div>
  </div>

  <script>
    window.APP_CONFIG = {
      companyName: "<%- COMPANY_NAME %>"
    };
  </script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/app.js"></script>
</body>
</html>
