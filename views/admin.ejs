<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel Operativo | BR-Group</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">
  <style>
    @import url('https://api.fontshare.com/v2/css?f[]=clash-display@600,700&f[]=general-sans@400,500,600&display=swap');

    :root {
      --bg-base: #08080c;
      --bg-sidebar: #0d0d12;
      --bg-chat: #0a0a0f;
      --bg-elevated: #141418;
      --bg-card: #18181f;
      --accent: #d4a853;
      --accent-dim: rgba(212, 168, 83, 0.12);
      --accent-glow: rgba(212, 168, 83, 0.25);
      --text-primary: #fafafa;
      --text-secondary: #a1a1aa;
      --text-muted: #52525b;
      --border: rgba(255, 255, 255, 0.06);
      --success: #22c55e;
      --success-dim: rgba(34, 197, 94, 0.12);
      --danger: #ef4444;
      --danger-dim: rgba(239, 68, 68, 0.12);
      --user-bubble: #27272a;
      --agent-bubble: #d4a853;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body {
      height: 100%;
      font-family: 'General Sans', -apple-system, sans-serif;
      background: var(--bg-base);
      color: var(--text-primary);
      overflow: hidden;
    }

    /* Layout */
    .dashboard {
      display: grid;
      grid-template-columns: 340px 1fr;
      height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      background: var(--bg-sidebar);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .sidebar-header {
      padding: 24px;
      border-bottom: 1px solid var(--border);
    }

    .agent-info {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .agent-avatar {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      background: var(--accent-dim);
      border: 2px solid var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }

    .agent-name {
      font-family: 'Clash Display', sans-serif;
      font-weight: 600;
      font-size: 1.1rem;
      color: var(--text-primary);
    }

    .agent-status {
      font-size: 0.8rem;
      color: var(--success);
      display: flex;
      align-items: center;
      gap: 6px;
      margin-top: 2px;
    }

    .status-dot {
      width: 8px;
      height: 8px;
      background: var(--success);
      border-radius: 50%;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .queue-section {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .queue-header {
      padding: 16px 24px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid var(--border);
    }

    .queue-title {
      font-size: 0.7rem;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--text-muted);
    }

    .queue-count {
      background: var(--accent-dim);
      color: var(--accent);
      font-size: 0.75rem;
      font-weight: 600;
      padding: 4px 10px;
      border-radius: 999px;
    }

    .queue-list {
      flex: 1;
      overflow-y: auto;
      padding: 16px;
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .queue-empty {
      text-align: center;
      color: var(--text-muted);
      padding: 40px 20px;
      font-size: 0.9rem;
    }

    .queue-empty svg {
      width: 48px;
      height: 48px;
      margin-bottom: 12px;
      opacity: 0.3;
    }

    /* Queue Card */
    .queue-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 16px;
      transition: all 0.25s;
      animation: slideIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .queue-card:hover {
      border-color: var(--accent);
      background: rgba(212, 168, 83, 0.03);
    }

    .q-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 10px;
    }

    .q-time {
      font-size: 0.75rem;
      color: var(--text-muted);
    }

    .q-id {
      font-family: 'Space Mono', monospace;
      font-size: 0.7rem;
      color: var(--text-muted);
      background: rgba(255,255,255,0.05);
      padding: 3px 8px;
      border-radius: 4px;
    }

    .q-reason {
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 14px;
      font-size: 0.95rem;
    }

    .btn-take {
      width: 100%;
      padding: 10px 16px;
      border-radius: 10px;
      border: none;
      background: var(--success);
      color: white;
      font-family: inherit;
      font-weight: 600;
      font-size: 0.85rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-take:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
    }

    .sidebar-footer {
      padding: 20px 24px;
      border-top: 1px solid var(--border);
    }

    .btn-logout {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      width: 100%;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: transparent;
      color: var(--text-secondary);
      font-family: inherit;
      font-size: 0.85rem;
      text-decoration: none;
      transition: all 0.2s;
    }

    .btn-logout:hover {
      border-color: var(--danger);
      color: var(--danger);
      background: var(--danger-dim);
    }

    /* Chat Area */
    .chat-area {
      background: var(--bg-chat);
      display: flex;
      flex-direction: column;
      height: 100%;
      position: relative;
    }

    /* Empty State */
    #empty-state {
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--text-muted);
      z-index: 10;
    }

    #empty-state svg {
      width: 80px;
      height: 80px;
      opacity: 0.15;
      margin-bottom: 20px;
    }

    #empty-state p {
      font-size: 1rem;
      max-width: 280px;
      text-align: center;
      line-height: 1.5;
    }

    /* Active Chat */
    #active-chat {
      display: none;
      flex-direction: column;
      height: 100%;
    }

    .chat-header {
      flex-shrink: 0;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: var(--bg-elevated);
      border-bottom: 1px solid var(--border);
    }

    .chat-user-info {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .chat-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--accent-dim);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.1rem;
    }

    .chat-id {
      font-family: 'Clash Display', sans-serif;
      font-weight: 600;
      font-size: 1rem;
    }

    .chat-label {
      font-size: 0.75rem;
      color: var(--success);
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .btn-finish {
      padding: 8px 16px;
      border-radius: 8px;
      border: 1px solid var(--danger);
      background: transparent;
      color: var(--danger);
      font-family: inherit;
      font-weight: 600;
      font-size: 0.85rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-finish:hover {
      background: var(--danger);
      color: white;
    }

    /* Case Info */
    .case-info {
      flex-shrink: 0;
      background: var(--bg-elevated);
      border-bottom: 1px solid var(--border);
      padding: 16px 24px;
      display: none;
    }

    .case-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 16px;
    }

    .case-item strong {
      display: block;
      font-size: 0.65rem;
      font-weight: 600;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: var(--accent);
      margin-bottom: 4px;
    }

    .case-item span {
      color: var(--text-primary);
      font-size: 0.9rem;
    }

    .case-photos {
      margin-top: 14px;
      display: flex;
      gap: 10px;
      overflow-x: auto;
      padding-bottom: 4px;
    }

    .thumb {
      height: 56px;
      width: 56px;
      border-radius: 8px;
      object-fit: cover;
      border: 1px solid var(--border);
      transition: all 0.2s;
    }

    .thumb:hover {
      border-color: var(--accent);
      transform: scale(1.05);
    }

    /* Thread */
    .thread {
      flex: 1;
      overflow-y: auto;
      padding: 24px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      min-height: 0;
    }

    .msg-row {
      display: flex;
      width: 100%;
      animation: msgIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes msgIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .msg-row.user { justify-content: flex-start; }
    .msg-row.agent { justify-content: flex-end; }
    .msg-row.bot { justify-content: center; }
    .msg-row.system { justify-content: center; }

    .msg-bubble {
      max-width: 70%;
      padding: 12px 16px;
      border-radius: 16px;
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .msg-row.user .msg-bubble {
      background: var(--user-bubble);
      border-bottom-left-radius: 4px;
    }

    .msg-row.agent .msg-bubble {
      background: var(--agent-bubble);
      color: var(--bg-base);
      border-bottom-right-radius: 4px;
    }

    .msg-row.bot .msg-bubble {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      font-size: 0.85rem;
      max-width: 80%;
      text-align: center;
    }

    .msg-row.system .msg-bubble {
      background: var(--accent-dim);
      color: var(--accent);
      font-size: 0.8rem;
      padding: 6px 14px;
      border-radius: 999px;
      font-weight: 500;
    }

    .msg-meta {
      display: block;
      font-size: 0.7rem;
      margin-top: 6px;
      opacity: 0.6;
      text-align: right;
    }

    .msg-img {
      max-width: 100%;
      max-height: 200px;
      border-radius: 12px;
      margin-bottom: 6px;
      display: block;
    }

    /* Input Area */
    .input-area {
      flex-shrink: 0;
      padding: 20px 24px;
      background: var(--bg-elevated);
      border-top: 1px solid var(--border);
      display: flex;
      gap: 12px;
      align-items: center;
    }

    #chatInput {
      flex: 1;
      padding: 14px 18px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: var(--bg-base);
      color: var(--text-primary);
      font-family: inherit;
      font-size: 0.95rem;
      outline: none;
      transition: all 0.2s;
    }

    #chatInput::placeholder {
      color: var(--text-muted);
    }

    #chatInput:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 3px var(--accent-dim);
    }

    #sendBtn {
      padding: 14px 24px;
      border-radius: 12px;
      border: none;
      background: var(--accent);
      color: var(--bg-base);
      font-family: 'Clash Display', sans-serif;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    #sendBtn:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 15px var(--accent-glow);
    }

    /* Scrollbar */
    .queue-list::-webkit-scrollbar,
    .thread::-webkit-scrollbar {
      width: 6px;
    }

    .queue-list::-webkit-scrollbar-track,
    .thread::-webkit-scrollbar-track {
      background: transparent;
    }

    .queue-list::-webkit-scrollbar-thumb,
    .thread::-webkit-scrollbar-thumb {
      background: var(--border);
      border-radius: 3px;
    }

    /* Mobile Menu Button */
    .mobile-menu-btn {
      display: none;
      position: fixed;
      top: 16px;
      left: 16px;
      z-index: 1000;
      width: 44px;
      height: 44px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: var(--bg-elevated);
      color: var(--text-primary);
      cursor: pointer;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }

    .mobile-menu-btn:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .mobile-menu-btn svg {
      width: 20px;
      height: 20px;
    }

    /* Overlay */
    .sidebar-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(4px);
      z-index: 998;
      opacity: 0;
      transition: opacity 0.3s;
    }

    .sidebar-overlay.active {
      opacity: 1;
    }

    /* Responsive */
    @media (max-width: 900px) {
      .mobile-menu-btn {
        display: flex;
      }

      .dashboard {
        grid-template-columns: 1fr;
      }

      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        z-index: 999;
        transform: translateX(-100%);
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        width: 300px;
        max-width: 85vw;
      }

      .sidebar.open {
        transform: translateX(0);
      }

      .sidebar-overlay.active {
        display: block;
      }

      .chat-header {
        padding-left: 70px;
      }

      #empty-state {
        padding: 20px;
      }

      #empty-state p {
        font-size: 0.9rem;
      }

      .input-area {
        padding: 16px;
      }

      #chatInput {
        padding: 12px 14px;
        font-size: 0.9rem;
      }

      #sendBtn {
        padding: 12px 18px;
        font-size: 0.85rem;
      }

      .thread {
        padding: 16px;
      }

      .msg-bubble {
        max-width: 85%;
        font-size: 0.9rem;
      }

      .case-grid {
        grid-template-columns: 1fr 1fr;
        gap: 12px;
      }

      .case-info {
        padding: 14px 16px;
      }
    }

    @media (max-width: 480px) {
      .case-grid {
        grid-template-columns: 1fr;
      }

      .chat-header {
        padding: 12px 16px 12px 70px;
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
      }

      .btn-finish {
        width: 100%;
        text-align: center;
      }

      .q-reason {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <!-- Mobile Menu Button -->
  <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Abrir men칰">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="3" y1="6" x2="21" y2="6"/>
      <line x1="3" y1="12" x2="21" y2="12"/>
      <line x1="3" y1="18" x2="21" y2="18"/>
    </svg>
  </button>

  <!-- Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>

  <div class="dashboard">
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="agent-info">
          <div class="agent-avatar">游녻</div>
          <div>
            <div class="agent-name"><%= agentName %></div>
            <div class="agent-status">
              <span class="status-dot"></span> En l칤nea
            </div>
          </div>
        </div>
      </div>

      <div class="queue-section">
        <div class="queue-header">
          <span class="queue-title">Cola de Espera</span>
          <span class="queue-count" id="queue-count">0</span>
        </div>
        <div id="queue-list" class="queue-list">
          <div class="queue-empty">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
            </svg>
            Sin clientes en espera
          </div>
        </div>
      </div>

      <div class="sidebar-footer">
        <a href="/logout" class="btn-logout">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
            <polyline points="16 17 21 12 16 7"/>
            <line x1="21" y1="12" x2="9" y2="12"/>
          </svg>
          Cerrar Sesi칩n
        </a>
      </div>
    </div>

    <div class="chat-area">
      <div id="empty-state">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <p>Seleccion치 un cliente de la cola para comenzar a chatear</p>
      </div>

      <div id="active-chat">
        <div class="chat-header">
          <div class="chat-user-info">
            <div class="chat-avatar">游눫</div>
            <div>
              <span class="chat-id" id="chat-title">Usuario</span>
              <span class="chat-label"><span class="status-dot"></span> Chat activo</span>
            </div>
          </div>
          <button id="finishBtn" class="btn-finish">Finalizar</button>
        </div>

        <div id="case-details" class="case-info"></div>
        <div id="thread" class="thread"></div>

        <div class="input-area">
          <input type="text" id="chatInput" placeholder="Escrib칤 tu respuesta..." autocomplete="off">
          <button id="sendBtn">Enviar</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    // Mobile menu
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const sidebar = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    function openSidebar() {
      sidebar.classList.add('open');
      sidebarOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeSidebar() {
      sidebar.classList.remove('open');
      sidebarOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    mobileMenuBtn.addEventListener('click', openSidebar);
    sidebarOverlay.addEventListener('click', closeSidebar);

    const socket = io('/admin');
    let currentChatId = null;

    const queueList = document.getElementById('queue-list');
    const queueCount = document.getElementById('queue-count');
    const emptyState = document.getElementById('empty-state');
    const activeChat = document.getElementById('active-chat');
    const thread = document.getElementById('thread');
    const caseDetails = document.getElementById('case-details');
    const chatTitle = document.getElementById('chat-title');
    const input = document.getElementById('chatInput');

    socket.on('connect_error', () => window.location.href = '/login');

    socket.on('queue_snapshot', (list) => {
      updateQueueCount(list.length);
      queueList.innerHTML = '';
      if(list.length === 0) {
        queueList.innerHTML = `<div class="queue-empty">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          Sin clientes en espera
        </div>`;
        return;
      }
      list.forEach(renderQueueItem);
    });

    socket.on('queue_add', (rec) => {
      const empty = queueList.querySelector('.queue-empty');
      if(empty) empty.remove();
      renderQueueItem(rec);
      updateQueueCount(queueList.querySelectorAll('.queue-card').length);
    });

    socket.on('queue_remove', ({chatId}) => {
      const el = document.getElementById(`q-${chatId}`);
      if(el) {
        el.style.opacity = '0';
        el.style.transform = 'translateX(-10px)';
        setTimeout(() => {
          el.remove();
          const count = queueList.querySelectorAll('.queue-card').length;
          updateQueueCount(count);
          if(count === 0) {
            queueList.innerHTML = `<div class="queue-empty">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
              </svg>
              Sin clientes en espera
            </div>`;
          }
        }, 200);
      }
    });

    socket.on('assigned', ({ chatId, transcript, payload }) => {
      emptyState.style.display = 'none';
      activeChat.style.display = 'flex';
      currentChatId = chatId;
      chatTitle.innerText = chatId.slice(-8);
      renderCaseInfo(payload);
      thread.innerHTML = '';
      transcript.forEach(renderMessage);
      scrollToBottom();
      input.focus();
    });

    socket.on('chat_message', (msg) => {
      if(msg.chatId === currentChatId) {
        renderMessage(msg);
        scrollToBottom();
      }
    });

    function updateQueueCount(n) {
      queueCount.textContent = n;
    }

    function renderQueueItem(rec) {
      const div = document.createElement('div');
      div.className = 'queue-card';
      div.id = `q-${rec.chatId}`;
      div.innerHTML = `
        <div class="q-header">
          <span class="q-time">Hace un momento</span>
          <span class="q-id">${rec.chatId.slice(-6)}</span>
        </div>
        <div class="q-reason">${getReasonText(rec.payload)}</div>
        <button class="btn-take">Tomar Caso</button>
      `;
      div.querySelector('.btn-take').addEventListener('click', () => {
        takeChat(rec.chatId);
      });
      queueList.appendChild(div);
    }

    function renderMessage(msg) {
      const row = document.createElement('div');
      row.className = `msg-row ${msg.who}`;
      const bubble = document.createElement('div');
      bubble.className = 'msg-bubble';
      let content = msg.text || '';
      if(msg.type === 'image') {
        content = `<a href="${msg.url}" target="_blank"><img src="${msg.url}" class="msg-img"></a>`;
        if(msg.text) content += `<div>${msg.text}</div>`;
      }
      const dateVal = msg.ts || msg.timestamp;
      const time = dateVal ? new Date(dateVal).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) : '';
      bubble.innerHTML = `${content}<span class="msg-meta">${time}</span>`;
      row.appendChild(bubble);
      thread.appendChild(row);
    }

    function renderCaseInfo(p) {
      caseDetails.style.display = 'none';
      caseDetails.innerHTML = '';
      if(!p) return;
      let items = '';
      if(p.categoria) {
        items += makeItem('Categor칤a', p.categoria);
        items += makeItem('Direcci칩n', p.direccion);
        items += makeItem('Descripci칩n', p.descripcion);
      } else if(p.propform) {
        items += makeItem('Operaci칩n', `${p.propform.op} ${p.propform.tipo}`);
        items += makeItem('Zona', p.propform.city || p.propform.direccion);
        items += makeItem('Presupuesto', `${p.propform.moneda||'$'} ${p.propform.presupuesto||'-'}`);
        items += makeItem('Detalles', `${p.propform.dorm||0} Dorm / ${p.propform.banos||0} Ba침os`);
      } else if(p.indice) {
        items += makeItem('칈ndice', p.indice);
        items += makeItem('C치lculo', p.calculo);
      } else if(p.motivo) {
        items += makeItem('Motivo', p.motivo);
      }
      let photosHtml = '';
      if(p.fotos && p.fotos.length) {
        photosHtml = `<div class="case-photos">${p.fotos.map(url => `<a href="${url}" target="_blank"><img src="${url}" class="thumb"></a>`).join('')}</div>`;
      }
      if(items) {
        caseDetails.innerHTML = `<div class="case-grid">${items}</div>${photosHtml}`;
        caseDetails.style.display = 'block';
      }
    }

    function makeItem(label, val) {
      if(!val) return '';
      return `<div class="case-item"><strong>${label}</strong><span>${val}</span></div>`;
    }

    function getReasonText(p) {
      if(!p) return 'Consulta General';
      if(p.categoria) return `游 ${p.categoria}`;
      if(p.propform) return `游 ${p.propform.op} ${p.propform.tipo}`;
      if(p.indice) return `游늳 ${p.indice}`;
      return p.motivo || 'Consulta';
    }

    function scrollToBottom() {
      setTimeout(() => { thread.scrollTop = thread.scrollHeight; }, 50);
    }

    function takeChat(chatId) {
      console.log('takeChat llamado:', chatId);
      socket.emit('assign', { chatId });
      closeSidebar();
    }

    const sendMsg = () => {
      const text = input.value.trim();
      if(!text || !currentChatId) return;
      socket.emit('agent_message', { chatId: currentChatId, text });
      input.value = '';
      input.focus();
    };

    document.getElementById('sendBtn').addEventListener('click', sendMsg);
    input.addEventListener('keypress', (e) => { if(e.key === 'Enter') sendMsg(); });

    document.getElementById('finishBtn').addEventListener('click', () => {
      if(!currentChatId) return;
      if(confirm('쮽inalizar esta conversaci칩n?')) {
        socket.emit('finish', { chatId: currentChatId });
        activeChat.style.display = 'none';
        emptyState.style.display = 'flex';
        currentChatId = null;
      }
    });
  </script>
</body>
</html>
