<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel Operativo | BR-Group</title>
  <style>
    /* --- VARIABLES & RESET --- */
    :root {
      --bg-dark: #0f172a;
      --bg-panel: #1e293b;
      --bg-chat: #020617;
      --accent: #22d3ee;
      --accent-hover: #06b6d4;
      --text: #f1f5f9;
      --text-dim: #94a3b8;
      --border: rgba(255, 255, 255, 0.08);
      --msg-user: #334155;
      --msg-agent: #0891b2;
      --danger: #ef4444;
      --success: #10b981;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; outline: none; font-family: 'Segoe UI', system-ui, sans-serif; }

    body {
      height: 100vh;
      background-color: var(--bg-dark);
      color: var(--text);
      overflow: hidden; /* Evita scroll en el body */
      display: flex;
      flex-direction: column;
    }

    /* --- LAYOUT PRINCIPAL (GRID) --- */
    .dashboard {
      display: grid;
      grid-template-columns: 320px 1fr; /* Sidebar fijo, Chat flexible */
      height: 100vh;
      width: 100vw;
    }

    /* --- SIDEBAR (COLA) --- */
    .sidebar {
      background: var(--bg-panel);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      height: 100%;
      overflow: hidden;
    }

    .header {
      padding: 20px;
      border-bottom: 1px solid var(--border);
      background: rgba(0,0,0,0.2);
    }
    .agent-name { font-weight: 700; font-size: 1.1rem; color: #fff; }
    .agent-status { font-size: 0.8rem; color: var(--success); display: flex; align-items: center; gap: 6px; }
    .dot { width: 8px; height: 8px; background: var(--success); border-radius: 50%; display: inline-block; }

    .queue-header {
      padding: 15px 20px;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-dim);
      font-weight: 700;
      background: rgba(255,255,255,0.02);
    }

    .queue-list {
      flex: 1;
      overflow-y: auto;
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    /* Tarjeta de la Cola */
    .queue-card {
      background: rgba(255,255,255,0.03);
      border: 1px solid var(--border);
      border-radius: 10px;
      padding: 12px;
      transition: all 0.2s;
      animation: slideIn 0.3s ease;
    }
    @keyframes slideIn { from{opacity:0; transform:translateY(5px)} to{opacity:1; transform:translateY(0)} }
    
    .queue-card:hover { border-color: var(--accent); background: rgba(34, 211, 238, 0.05); }
    
    .q-meta { display: flex; justify-content: space-between; font-size: 0.75rem; color: var(--text-dim); margin-bottom: 6px; }
    .q-reason { font-weight: 600; color: #fff; margin-bottom: 10px; display: block; }
    
    .btn-take {
      width: 100%;
      padding: 8px;
      border-radius: 6px;
      border: none;
      background: var(--success);
      color: #fff;
      font-weight: 600;
      cursor: pointer;
      font-size: 0.85rem;
      transition: 0.2s;
    }
    .btn-take:hover { filter: brightness(1.1); transform: translateY(-1px); }

    .sidebar-footer {
      padding: 15px;
      border-top: 1px solid var(--border);
      text-align: center;
    }
    .btn-logout { color: var(--danger); text-decoration: none; font-size: 0.9rem; font-weight: 600; }

    /* --- CHAT AREA --- */
    .chat-area {
      background: var(--bg-chat);
      background-image: radial-gradient(circle at top right, #1e293b 0%, transparent 40%);
      position: relative;
      display: flex;
      flex-direction: column;
      height: 100%;
      overflow: hidden; /* CR칈TICO: Evita que el input se salga */
    }

    /* Estado Vac칤o */
    #empty-state {
      position: absolute; top:0; left:0; width:100%; height:100%;
      display: flex; flex-direction: column;
      align-items: center; justify-content: center;
      color: var(--text-dim);
      z-index: 10;
      background: var(--bg-chat);
    }
    #empty-state svg { width: 80px; height: 80px; opacity: 0.2; margin-bottom: 20px; }

    /* Contenedor del Chat Activo */
    #active-chat {
      display: none; /* Se activa con JS */
      flex-direction: column;
      height: 100%;
      width: 100%;
    }

    /* 1. Header del Chat */
    .chat-header {
      flex-shrink: 0; /* No encoger */
      height: 60px;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(15, 23, 42, 0.8);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
      z-index: 5;
    }
    .chat-user-info { display: flex; flex-direction: column; }
    .chat-id { font-weight: 700; font-size: 1rem; }
    .chat-label { font-size: 0.75rem; color: var(--text-dim); }

    .btn-finish {
      background: transparent;
      border: 1px solid var(--danger);
      color: var(--danger);
      padding: 6px 14px;
      border-radius: 6px;
      font-size: 0.85rem;
      cursor: pointer;
      font-weight: 600;
      transition: 0.2s;
    }
    .btn-finish:hover { background: var(--danger); color: #fff; }

    /* 2. Panel de Detalles (Case Info) */
    .case-info {
      flex-shrink: 0; /* No encoger */
      background: rgba(30, 41, 59, 0.4);
      border-bottom: 1px solid var(--border);
      padding: 10px 20px;
      font-size: 0.85rem;
      display: none; /* JS toggle */
    }
    .case-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 10px; }
    .case-item strong { color: var(--accent); display: block; font-size: 0.7rem; text-transform: uppercase; margin-bottom: 2px; }
    .case-item span { color: #fff; }
    
    .case-photos { margin-top: 10px; display: flex; gap: 8px; overflow-x: auto; padding-bottom: 5px; }
    .thumb { height: 50px; width: 50px; border-radius: 6px; object-fit: cover; border: 1px solid var(--border); cursor: zoom-in; }

    /* 3. Hilo de Mensajes (SCROLLABLE AREA) */
    .thread {
      flex: 1; /* Ocupa todo el espacio restante */
      overflow-y: auto; /* Scroll aqu칤 */
      min-height: 0; /* Fix para Firefox/Flexbox */
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    /* Burbujas */
    .msg-row { display: flex; width: 100%; }
    .msg-row.user { justify-content: flex-start; }
    .msg-row.agent { justify-content: flex-end; }
    .msg-row.bot { justify-content: center; }
    .msg-row.system { justify-content: center; }

    .msg-bubble {
      max-width: 70%;
      padding: 10px 14px;
      border-radius: 12px;
      font-size: 0.95rem;
      line-height: 1.4;
      position: relative;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    
    .msg-row.user .msg-bubble { background: var(--msg-user); border-bottom-left-radius: 2px; color: #fff; }
    .msg-row.agent .msg-bubble { background: var(--msg-agent); border-bottom-right-radius: 2px; color: #fff; }
    
    .msg-row.bot .msg-bubble { 
      background: transparent; border: 1px solid var(--border); color: var(--text-dim); font-size: 0.85rem; max-width: 80%; text-align: center; 
    }
    
    .msg-row.system .msg-bubble {
      background: rgba(34,211,238,0.1); color: var(--accent); font-size: 0.8rem; padding: 4px 12px; border-radius: 20px; font-weight: 600;
    }

    .msg-meta { display: block; font-size: 0.7rem; margin-top: 4px; opacity: 0.6; text-align: right; }
    .msg-img { max-width: 100%; border-radius: 8px; margin-bottom: 5px; display: block; }

    /* 4. Input Area (FIJO ABAJO) */
    .input-area {
      flex-shrink: 0; /* No encoger */
      padding: 15px 20px;
      background: var(--bg-panel);
      border-top: 1px solid var(--border);
      display: flex;
      gap: 10px;
      align-items: center;
    }
    
    #chatInput {
      flex: 1;
      background: rgba(0,0,0,0.3);
      border: 1px solid var(--border);
      color: #fff;
      padding: 12px;
      border-radius: 8px;
      font-size: 0.95rem;
    }
    #chatInput:focus { border-color: var(--accent); }

    #sendBtn {
      background: var(--accent);
      color: #000;
      border: none;
      padding: 12px 20px;
      border-radius: 8px;
      font-weight: 700;
      cursor: pointer;
    }
    #sendBtn:hover { background: var(--accent-hover); }

  </style>
</head>
<body>

  <div class="dashboard">
    <div class="sidebar">
      <div class="header">
        <div class="agent-name"><%= agentName %></div>
        <div class="agent-status"><span class="dot"></span> En l칤nea</div>
      </div>
      
      <div class="queue-header">Cola de Espera</div>
      <div id="queue-list" class="queue-list">
        <div style="text-align:center; color:var(--text-dim); padding-top:20px; font-size:0.9rem">
          Sin clientes en espera.
        </div>
      </div>

      <div class="sidebar-footer">
        <a href="/logout" class="btn-logout">Cerrar Sesi칩n</a>
      </div>
    </div>

    <div class="chat-area">
      
      <div id="empty-state">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
        <p>Seleccion치 un usuario de la cola para comenzar</p>
      </div>

      <div id="active-chat">
        
        <div class="chat-header">
          <div class="chat-user-info">
            <span class="chat-id" id="chat-title">Usuario</span>
            <span class="chat-label">Chat en curso</span>
          </div>
          <button id="finishBtn" class="btn-finish">Finalizar Chat</button>
        </div>

        <div id="case-details" class="case-info"></div>

        <div id="thread" class="thread"></div>

        <div class="input-area">
          <input type="text" id="chatInput" placeholder="Escrib칤 un mensaje..." autocomplete="off">
          <button id="sendBtn">Enviar</button>
        </div>

      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io('/admin');
    let currentChatId = null;

    // Referencias DOM
    const queueList = document.getElementById('queue-list');
    const emptyState = document.getElementById('empty-state');
    const activeChat = document.getElementById('active-chat');
    const thread = document.getElementById('thread');
    const caseDetails = document.getElementById('case-details');
    const chatTitle = document.getElementById('chat-title');
    const input = document.getElementById('chatInput');

    // --- SOCKET LOGIC ---

    socket.on('connect_error', () => window.location.href = '/login');

    socket.on('queue_snapshot', (list) => {
      queueList.innerHTML = '';
      if(list.length === 0) {
        queueList.innerHTML = `<div style="text-align:center; color:#94a3b8; padding-top:20px; font-size:0.9rem">Sin clientes en espera.</div>`;
        return;
      }
      list.forEach(renderQueueItem);
    });

    socket.on('queue_add', (rec) => {
      if(queueList.innerText.includes('Sin clientes')) queueList.innerHTML = '';
      renderQueueItem(rec);
    });

    socket.on('queue_remove', ({chatId}) => {
      const el = document.getElementById(`q-${chatId}`);
      if(el) {
        el.style.opacity = '0';
        el.style.transform = 'translateX(-10px)';
        setTimeout(() => el.remove(), 200);
      }
    });

    socket.on('assigned', ({ chatId, transcript, payload }) => {
      emptyState.style.display = 'none';
      activeChat.style.display = 'flex'; // Usamos flex para que el height funcione
      
      currentChatId = chatId;
      chatTitle.innerText = chatId;
      
      renderCaseInfo(payload);

      thread.innerHTML = '';
      transcript.forEach(renderMessage);
      scrollToBottom();

      input.focus();
    });

    socket.on('chat_message', (msg) => {
      if(msg.chatId === currentChatId) {
        renderMessage(msg);
        scrollToBottom();
      }
    });

    // --- RENDERING HELPERS ---

    function renderQueueItem(rec) {
      const div = document.createElement('div');
      div.className = 'queue-card';
      div.id = `q-${rec.chatId}`;
      div.innerHTML = `
        <div class="q-meta">
          <span>Hace un momento</span>
          <span>${rec.chatId.slice(-4)}</span>
        </div>
        <span class="q-reason">${getReasonText(rec.payload)}</span>
        <button class="btn-take" onclick="takeChat('${rec.chatId}')">Tomar Caso</button>
      `;
      queueList.appendChild(div);
    }

    function renderMessage(msg) {
      const row = document.createElement('div');
      row.className = `msg-row ${msg.who}`;

      const bubble = document.createElement('div');
      bubble.className = 'msg-bubble';

      let content = msg.text || '';
      
      if(msg.type === 'image') {
        content = `<a href="${msg.url}" target="_blank"><img src="${msg.url}" class="msg-img"></a>`;
        if(msg.text) content += `<div>${msg.text}</div>`;
      }
      
      // 游댠 FIX: Acepta 'ts' (vivo) o 'timestamp' (historial)
      const dateVal = msg.ts || msg.timestamp;
      const time = dateVal 
        ? new Date(dateVal).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) 
        : '';

      bubble.innerHTML = `${content} <span class="msg-meta">${time}</span>`;
      
      row.appendChild(bubble);
      thread.appendChild(row);
    }

    function renderCaseInfo(p) {
      caseDetails.style.display = 'none';
      caseDetails.innerHTML = '';
      
      if(!p) return;

      let items = '';
      
      // Mantenimiento
      if(p.categoria) {
        items += makeItem('Categor칤a', p.categoria);
        items += makeItem('Direcci칩n', p.direccion);
        items += makeItem('Descripci칩n', p.descripcion);
      }
      // Propiedades
      else if(p.propform) {
        items += makeItem('Operaci칩n', `${p.propform.op} ${p.propform.tipo}`);
        items += makeItem('Zona/Ciudad', p.propform.city || p.propform.direccion);
        items += makeItem('Presupuesto', `${p.propform.moneda||'$'} ${p.propform.presupuesto||'-'}`);
        items += makeItem('Detalles', `${p.propform.dorm||0} Dorm / ${p.propform.banos||0} Ba침os`);
      }
      // 칈ndice
      else if(p.indice) {
        items += makeItem('칈ndice', p.indice);
        items += makeItem('C치lculo', p.calculo);
      }
      // Motivo simple
      else if(p.motivo) {
        items += makeItem('Motivo', p.motivo);
      }

      let photosHtml = '';
      if(p.fotos && p.fotos.length) {
        photosHtml = `<div class="case-photos">
          ${p.fotos.map(url => `<a href="${url}" target="_blank"><img src="${url}" class="thumb"></a>`).join('')}
        </div>`;
      }

      if(items) {
        caseDetails.innerHTML = `<div class="case-grid">${items}</div>${photosHtml}`;
        caseDetails.style.display = 'block';
      }
    }

    function makeItem(label, val) {
      if(!val) return '';
      return `<div class="case-item"><strong>${label}</strong><span>${val}</span></div>`;
    }

    function getReasonText(p) {
      if(!p) return 'Consulta General';
      if(p.categoria) return `游 ${p.categoria}`;
      if(p.propform) return `游 ${p.propform.op} ${p.propform.tipo}`;
      if(p.indice) return `游늳 ${p.indice}`;
      return p.motivo || 'Consulta';
    }

    function scrollToBottom() {
      // Peque침o timeout para asegurar que el render termin칩
      setTimeout(() => {
        thread.scrollTop = thread.scrollHeight;
      }, 50);
    }

    // --- ACCIONES ---

    window.takeChat = (chatId) => {
      socket.emit('assign', { chatId });
    };

    const sendMsg = () => {
      const text = input.value.trim();
      if(!text || !currentChatId) return;
      socket.emit('agent_message', { chatId: currentChatId, text });
      input.value = '';
      input.focus();
    };

    document.getElementById('sendBtn').addEventListener('click', sendMsg);
    input.addEventListener('keypress', (e) => { if(e.key === 'Enter') sendMsg(); });

    document.getElementById('finishBtn').addEventListener('click', () => {
      if(!currentChatId) return;
      if(confirm('쮽inalizar esta conversaci칩n?')) {
        socket.emit('finish', { chatId: currentChatId });
        
        // Reset UI
        activeChat.style.display = 'none';
        emptyState.style.display = 'flex';
        currentChatId = null;
      }
    });

  </script>
</body>
</html>