<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>Panel Operativo | BR-Group</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Space+Mono&display=swap" rel="stylesheet">
  <style>
    @import url('https://api.fontshare.com/v2/css?f[]=clash-display@600,700&f[]=general-sans@400,500,600&display=swap');

    :root {
      --bg-base: #08080c;
      --bg-sidebar: #0d0d12;
      --bg-chat: #0a0a0f;
      --bg-elevated: #141418;
      --bg-card: #18181f;
      --accent: #d4a853;
      --accent-dim: rgba(212, 168, 83, 0.12);
      --accent-glow: rgba(212, 168, 83, 0.25);
      --text-primary: #fafafa;
      --text-secondary: #a1a1aa;
      --text-muted: #52525b;
      --border: rgba(255, 255, 255, 0.06);
      --success: #22c55e;
      --success-dim: rgba(34, 197, 94, 0.12);
      --danger: #ef4444;
      --danger-dim: rgba(239, 68, 68, 0.12);
      --user-bubble: #27272a;
      --agent-bubble: #d4a853;
    }

    * { box-sizing: border-box; margin: 0; padding: 0; }
    html, body {
      height: 100%;
      font-family: 'General Sans', -apple-system, sans-serif;
      background: var(--bg-base);
      color: var(--text-primary);
      overflow: hidden;
    }

    /* Layout */
    .dashboard {
      display: grid;
      grid-template-columns: 320px 1fr;
      height: 100vh;
      height: 100dvh;
      overflow: hidden;
    }

    /* Sidebar */
    .sidebar {
      background: var(--bg-sidebar);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    .sidebar-header {
      padding: 20px;
      border-bottom: 1px solid var(--border);
    }

    .agent-info {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .agent-avatar {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: var(--accent-dim);
      border: 2px solid var(--accent);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.1rem;
      flex-shrink: 0;
    }

    .agent-name {
      font-family: 'Clash Display', sans-serif;
      font-weight: 600;
      font-size: 1.1rem;
      color: var(--text-primary);
    }

    .agent-status {
      font-size: 0.8rem;
      color: var(--success);
      display: flex;
      align-items: center;
      gap: 6px;
      margin-top: 2px;
    }

    .status-dot {
      width: 8px;
      height: 8px;
      background: var(--success);
      border-radius: 50%;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .queue-section {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .queue-header {
      padding: 14px 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid var(--border);
    }

    .queue-title {
      font-size: 0.7rem;
      font-weight: 600;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--text-muted);
    }

    .queue-count {
      background: var(--accent-dim);
      color: var(--accent);
      font-size: 0.75rem;
      font-weight: 600;
      padding: 4px 10px;
      border-radius: 999px;
    }

    .queue-list {
      flex: 1;
      overflow-y: auto;
      padding: 14px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .queue-empty {
      text-align: center;
      color: var(--text-muted);
      padding: 40px 20px;
      font-size: 0.9rem;
    }

    .queue-empty svg {
      width: 48px;
      height: 48px;
      margin-bottom: 12px;
      opacity: 0.3;
    }

    /* Active Chats Section */
    .active-section {
      border-bottom: 1px solid var(--border);
    }

    .active-list {
      padding: 10px 14px;
      display: flex;
      flex-direction: column;
      gap: 8px;
      max-height: 220px;
      overflow-y: auto;
    }

    .active-accent {
      background: rgba(34, 197, 94, 0.12) !important;
      color: var(--success) !important;
    }

    .active-chat-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 10px;
      padding: 10px 12px;
      cursor: pointer;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .active-chat-card:hover {
      border-color: var(--accent);
      background: rgba(212, 168, 83, 0.03);
    }

    .active-chat-card.selected {
      border-color: var(--accent);
      background: var(--accent-dim);
    }

    .active-chat-dot {
      width: 8px;
      height: 8px;
      background: var(--success);
      border-radius: 50%;
      flex-shrink: 0;
      animation: pulse 2s infinite;
    }

    .active-chat-info {
      flex: 1;
      min-width: 0;
    }

    .active-chat-id {
      font-family: 'Space Mono', monospace;
      font-size: 0.75rem;
      color: var(--text-primary);
    }

    .active-chat-reason {
      font-size: 0.7rem;
      color: var(--text-secondary);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    /* Toggle Switch */
    .toggle-row {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 0.72rem;
      color: var(--text-secondary);
      margin-top: 10px;
    }

    .toggle-row label {
      cursor: pointer;
      user-select: none;
    }

    .toggle {
      position: relative;
      width: 36px;
      height: 20px;
      flex-shrink: 0;
    }

    .toggle input {
      opacity: 0;
      width: 0;
      height: 0;
    }

    .toggle-slider {
      position: absolute;
      inset: 0;
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 20px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .toggle-slider::before {
      content: '';
      position: absolute;
      width: 14px;
      height: 14px;
      left: 2px;
      top: 2px;
      background: var(--text-muted);
      border-radius: 50%;
      transition: all 0.2s;
    }

    .toggle input:checked + .toggle-slider {
      background: var(--accent-dim);
      border-color: var(--accent);
    }

    .toggle input:checked + .toggle-slider::before {
      transform: translateX(16px);
      background: var(--accent);
    }

    .chat-header-actions {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .chat-toggle-row {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 0.7rem;
      color: var(--text-muted);
    }

    /* Queue Card */
    .queue-card {
      background: var(--bg-card);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 14px;
      transition: all 0.25s;
      animation: slideIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .queue-card:hover {
      border-color: var(--accent);
      background: rgba(212, 168, 83, 0.03);
    }

    .q-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 10px;
    }

    .q-time {
      font-size: 0.75rem;
      color: var(--text-muted);
    }

    .q-id {
      font-family: 'Space Mono', monospace;
      font-size: 0.7rem;
      color: var(--text-muted);
      background: rgba(255,255,255,0.05);
      padding: 3px 8px;
      border-radius: 4px;
    }

    .q-reason {
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 14px;
      font-size: 0.95rem;
    }

    .btn-take {
      width: 100%;
      padding: 9px 14px;
      border-radius: 8px;
      border: none;
      background: var(--success);
      color: white;
      font-family: inherit;
      font-weight: 600;
      font-size: 0.82rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-take:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
    }

    .sidebar-footer {
      padding: 16px 20px;
      border-top: 1px solid var(--border);
    }

    .btn-logout {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      width: 100%;
      padding: 10px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: transparent;
      color: var(--text-secondary);
      font-family: inherit;
      font-size: 0.85rem;
      text-decoration: none;
      transition: all 0.2s;
    }

    .btn-logout:hover {
      border-color: var(--danger);
      color: var(--danger);
      background: var(--danger-dim);
    }

    /* Chat Area */
    .chat-area {
      background: var(--bg-chat);
      display: flex;
      flex-direction: column;
      min-height: 0;
      overflow: hidden;
      position: relative;
    }

    /* Empty State */
    #empty-state {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: var(--text-muted);
    }

    #empty-state svg {
      width: 80px;
      height: 80px;
      opacity: 0.15;
      margin-bottom: 20px;
    }

    #empty-state p {
      font-size: 1rem;
      max-width: 280px;
      text-align: center;
      line-height: 1.5;
    }

    /* Active Chat */
    #active-chat {
      display: none;
      flex-direction: column;
      flex: 1;
      min-height: 0;
      overflow: hidden;
    }

    .chat-header {
      flex-shrink: 0;
      padding: 14px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: var(--bg-elevated);
      border-bottom: 1px solid var(--border);
    }

    .chat-user-info {
      display: flex;
      align-items: center;
      gap: 14px;
    }

    .chat-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: var(--accent-dim);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.1rem;
    }

    .chat-id {
      font-family: 'Clash Display', sans-serif;
      font-weight: 600;
      font-size: 1rem;
    }

    .chat-label {
      font-size: 0.75rem;
      color: var(--success);
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .btn-finish {
      padding: 8px 16px;
      border-radius: 8px;
      border: 1px solid var(--danger);
      background: transparent;
      color: var(--danger);
      font-family: inherit;
      font-weight: 600;
      font-size: 0.85rem;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-finish:hover {
      background: var(--danger);
      color: white;
    }

    /* Case Info */
    .case-info {
      flex-shrink: 0;
      background: var(--bg-elevated);
      border-bottom: 1px solid var(--border);
      padding: 14px 20px;
      display: none;
    }

    /* Attach button */
    .btn-attach {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: transparent;
      color: var(--text-secondary);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    .btn-attach:hover {
      border-color: var(--accent);
      color: var(--accent);
      background: var(--accent-dim);
    }

    .btn-attach svg {
      width: 18px;
      height: 18px;
    }

    .case-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 16px;
    }

    .case-item strong {
      display: block;
      font-size: 0.65rem;
      font-weight: 600;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: var(--accent);
      margin-bottom: 4px;
    }

    .case-item span {
      color: var(--text-primary);
      font-size: 0.9rem;
    }

    .case-photos {
      margin-top: 14px;
      display: flex;
      gap: 10px;
      overflow-x: auto;
      padding-bottom: 4px;
    }

    .thumb {
      height: 56px;
      width: 56px;
      border-radius: 8px;
      object-fit: cover;
      border: 1px solid var(--border);
      transition: all 0.2s;
    }

    .thumb:hover {
      border-color: var(--accent);
      transform: scale(1.05);
    }

    /* Thread */
    .thread {
      flex: 1;
      overflow-y: auto;
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 14px;
      min-height: 0;
    }

    .msg-row {
      display: flex;
      width: 100%;
      animation: msgIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes msgIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .msg-row.user { justify-content: flex-start; }
    .msg-row.agent { justify-content: flex-end; }
    .msg-row.bot { justify-content: center; }
    .msg-row.system { justify-content: center; }

    .msg-bubble {
      max-width: 70%;
      padding: 12px 16px;
      border-radius: 16px;
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .msg-row.user .msg-bubble {
      background: var(--user-bubble);
      border-bottom-left-radius: 4px;
    }

    .msg-row.agent .msg-bubble {
      background: var(--agent-bubble);
      color: var(--bg-base);
      border-bottom-right-radius: 4px;
    }

    .msg-row.bot .msg-bubble {
      background: transparent;
      border: 1px solid var(--border);
      color: var(--text-muted);
      font-size: 0.85rem;
      max-width: 80%;
      text-align: center;
    }

    .msg-row.system .msg-bubble {
      background: var(--accent-dim);
      color: var(--accent);
      font-size: 0.8rem;
      padding: 6px 14px;
      border-radius: 999px;
      font-weight: 500;
    }

    .msg-meta {
      display: block;
      font-size: 0.7rem;
      margin-top: 6px;
      opacity: 0.6;
      text-align: right;
    }

    .msg-img {
      max-width: 100%;
      max-height: 200px;
      border-radius: 12px;
      margin-bottom: 6px;
      display: block;
    }

    /* Input Area */
    .input-area {
      flex-shrink: 0;
      padding: 16px 24px;
      padding-bottom: max(16px, env(safe-area-inset-bottom));
      background: var(--bg-elevated);
      border-top: 1px solid var(--border);
      display: flex;
      gap: 12px;
      align-items: center;
    }

    #chatInput {
      flex: 1;
      padding: 12px 16px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: var(--bg-base);
      color: var(--text-primary);
      font-family: inherit;
      font-size: 0.92rem;
      outline: none;
      transition: all 0.2s;
    }

    #chatInput::placeholder {
      color: var(--text-muted);
    }

    #chatInput:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 3px var(--accent-dim);
    }

    #sendBtn {
      padding: 12px 20px;
      border-radius: 10px;
      border: none;
      background: var(--accent);
      color: var(--bg-base);
      font-family: 'Clash Display', sans-serif;
      font-weight: 600;
      font-size: 0.85rem;
      cursor: pointer;
      transition: all 0.2s;
      flex-shrink: 0;
    }

    #sendBtn:hover {
      transform: translateY(-1px);
      box-shadow: 0 4px 15px var(--accent-glow);
    }

    /* Scrollbar */
    .queue-list::-webkit-scrollbar,
    .thread::-webkit-scrollbar {
      width: 6px;
    }

    .queue-list::-webkit-scrollbar-track,
    .thread::-webkit-scrollbar-track {
      background: transparent;
    }

    .queue-list::-webkit-scrollbar-thumb,
    .thread::-webkit-scrollbar-thumb {
      background: var(--border);
      border-radius: 3px;
    }

    /* Mobile Menu Button */
    .mobile-menu-btn {
      display: none;
      position: fixed;
      top: 16px;
      left: 16px;
      z-index: 1000;
      width: 44px;
      height: 44px;
      border-radius: 12px;
      border: 1px solid var(--border);
      background: var(--bg-elevated);
      color: var(--text-primary);
      cursor: pointer;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }

    .mobile-menu-btn:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .mobile-menu-btn svg {
      width: 20px;
      height: 20px;
    }

    /* Overlay */
    .sidebar-overlay {
      display: none;
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(4px);
      z-index: 998;
      opacity: 0;
      transition: opacity 0.3s;
    }

    .sidebar-overlay.active {
      opacity: 1;
    }

    /* Responsive */
    @media (max-width: 900px) {
      .mobile-menu-btn {
        display: flex;
      }

      .dashboard {
        grid-template-columns: 1fr;
        height: 100vh;
        height: 100dvh;
      }

      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        height: 100dvh;
        z-index: 999;
        transform: translateX(-100%);
        transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        width: 300px;
        max-width: 85vw;
      }

      .sidebar.open {
        transform: translateX(0);
      }

      .sidebar-overlay.active {
        display: block;
      }

      .chat-header {
        padding: 12px 16px 12px 64px;
      }

      .chat-avatar {
        width: 34px;
        height: 34px;
        font-size: 0.95rem;
      }

      .chat-id {
        font-size: 0.9rem;
      }

      .chat-label {
        font-size: 0.7rem;
      }

      .btn-finish {
        padding: 7px 14px;
        font-size: 0.8rem;
      }

      #empty-state {
        padding: 20px;
      }

      #empty-state svg {
        width: 56px;
        height: 56px;
      }

      #empty-state p {
        font-size: 0.85rem;
      }

      .input-area {
        padding: 12px 14px;
        padding-bottom: max(12px, env(safe-area-inset-bottom));
        gap: 10px;
      }

      #chatInput {
        padding: 11px 14px;
        font-size: 16px; /* prevents iOS zoom on focus */
        border-radius: 10px;
      }

      #sendBtn {
        padding: 11px 16px;
        font-size: 0.8rem;
        border-radius: 10px;
      }

      .thread {
        padding: 14px;
        gap: 12px;
      }

      .msg-bubble {
        max-width: 85%;
        font-size: 0.88rem;
        padding: 10px 14px;
        border-radius: 14px;
      }

      .msg-meta {
        font-size: 0.65rem;
        margin-top: 4px;
      }

      .case-info {
        padding: 12px 14px;
      }

      .case-grid {
        grid-template-columns: 1fr 1fr;
        gap: 10px;
      }

      .case-item strong {
        font-size: 0.6rem;
      }

      .case-item span {
        font-size: 0.82rem;
      }

      .thumb {
        height: 48px;
        width: 48px;
      }

      .btn-attach {
        width: 38px;
        height: 38px;
        border-radius: 8px;
      }

      .btn-attach svg {
        width: 16px;
        height: 16px;
      }
    }

    @media (max-width: 480px) {
      .chat-header {
        padding: 10px 12px 10px 60px;
        gap: 8px;
        flex-wrap: wrap;
      }

      .chat-header-actions {
        gap: 8px;
        width: 100%;
        justify-content: space-between;
      }

      .chat-toggle-row label {
        font-size: 0.65rem;
      }

      .chat-user-info {
        gap: 10px;
      }

      .chat-avatar {
        width: 30px;
        height: 30px;
        font-size: 0.85rem;
      }

      .case-grid {
        grid-template-columns: 1fr;
        gap: 8px;
      }

      .input-area {
        padding: 10px 12px;
        padding-bottom: max(10px, env(safe-area-inset-bottom));
        gap: 8px;
      }

      #chatInput {
        padding: 10px 12px;
      }

      #sendBtn {
        padding: 10px 14px;
        font-size: 0.78rem;
      }

      .thread {
        padding: 10px;
        gap: 10px;
      }

      .msg-bubble {
        max-width: 88%;
        padding: 9px 12px;
        font-size: 0.85rem;
      }

      .msg-img {
        max-height: 160px;
      }
    }

    /* Very small screens */
    @media (max-width: 360px) {
      .chat-header {
        padding-left: 52px;
      }

      .mobile-menu-btn {
        width: 38px;
        height: 38px;
        top: 12px;
        left: 10px;
        border-radius: 10px;
      }

      .mobile-menu-btn svg {
        width: 18px;
        height: 18px;
      }

      .input-area {
        padding: 8px 10px;
        padding-bottom: max(8px, env(safe-area-inset-bottom));
      }
    }
  </style>
</head>
<body>
  <!-- Mobile Menu Button -->
  <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Abrir men칰">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="3" y1="6" x2="21" y2="6"/>
      <line x1="3" y1="12" x2="21" y2="12"/>
      <line x1="3" y1="18" x2="21" y2="18"/>
    </svg>
  </button>

  <!-- Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>

  <div class="dashboard">
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <div class="agent-info">
          <div class="agent-avatar">游녻</div>
          <div>
            <div class="agent-name"><%= agentName %></div>
            <div class="agent-status">
              <span class="status-dot"></span> En l칤nea
            </div>
          </div>
        </div>
        <div class="toggle-row">
          <span class="toggle">
            <input type="checkbox" id="globalTimeoutToggle">
            <span class="toggle-slider"></span>
          </span>
          <label for="globalTimeoutToggle">Pausar auto-cierre global</label>
        </div>
      </div>

      <!-- Chats Activos -->
      <div class="active-section" id="active-section">
        <div class="queue-header">
          <span class="queue-title">Chats Activos</span>
          <span class="queue-count active-accent" id="active-count">0</span>
        </div>
        <div id="active-list" class="active-list"></div>
      </div>

      <div class="queue-section">
        <div class="queue-header">
          <span class="queue-title">Cola de Espera</span>
          <span class="queue-count" id="queue-count">0</span>
        </div>
        <div id="queue-list" class="queue-list">
          <div class="queue-empty">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
            </svg>
            Sin clientes en espera
          </div>
        </div>
      </div>

      <div class="sidebar-footer">
        <a href="/logout" class="btn-logout">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
            <polyline points="16 17 21 12 16 7"/>
            <line x1="21" y1="12" x2="9" y2="12"/>
          </svg>
          Cerrar Sesi칩n
        </a>
      </div>
    </div>

    <div class="chat-area">
      <div id="empty-state">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <p>Seleccion치 un cliente de la cola para comenzar a chatear</p>
      </div>

      <div id="active-chat">
        <div class="chat-header">
          <div class="chat-user-info">
            <div class="chat-avatar">游눫</div>
            <div>
              <span class="chat-id" id="chat-title">Usuario</span>
              <span class="chat-label"><span class="status-dot"></span> Chat activo</span>
            </div>
          </div>
          <div class="chat-header-actions">
            <div class="chat-toggle-row">
              <span class="toggle">
                <input type="checkbox" id="chatTimeoutToggle">
                <span class="toggle-slider"></span>
              </span>
              <label for="chatTimeoutToggle">Sin auto-cierre</label>
            </div>
            <button id="finishBtn" class="btn-finish">Finalizar</button>
          </div>
        </div>

        <div id="case-details" class="case-info"></div>
        <div id="thread" class="thread"></div>

        <div class="input-area">
          <button class="btn-attach" id="attachBtn" title="Enviar imagen o archivo">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
            </svg>
          </button>
          <input type="file" id="fileInput" accept="image/*,.pdf,.doc,.docx,.xls,.xlsx" multiple style="display:none">
          <input type="text" id="chatInput" placeholder="Escrib칤 tu respuesta..." autocomplete="off">
          <button id="sendBtn">Enviar</button>
        </div>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    // Mobile menu
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const sidebar = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    function openSidebar() {
      sidebar.classList.add('open');
      sidebarOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeSidebar() {
      sidebar.classList.remove('open');
      sidebarOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    mobileMenuBtn.addEventListener('click', openSidebar);
    sidebarOverlay.addEventListener('click', closeSidebar);

    const socket = io('/admin');
    const activeChatsMap = new Map(); // chatId -> { transcript, payload }
    let currentChatId = null;

    const queueList = document.getElementById('queue-list');
    const queueCount = document.getElementById('queue-count');
    const activeList = document.getElementById('active-list');
    const activeCountEl = document.getElementById('active-count');
    const emptyState = document.getElementById('empty-state');
    const activeChat = document.getElementById('active-chat');
    const thread = document.getElementById('thread');
    const caseDetails = document.getElementById('case-details');
    const chatTitle = document.getElementById('chat-title');
    const input = document.getElementById('chatInput');

    socket.on('connect_error', () => window.location.href = '/login');

    /* ---- Cola de espera ---- */
    socket.on('queue_snapshot', (list) => {
      updateQueueCount(list.length);
      queueList.innerHTML = '';
      if(list.length === 0) {
        queueList.innerHTML = `<div class="queue-empty">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          Sin clientes en espera
        </div>`;
        return;
      }
      list.forEach(renderQueueItem);
    });

    socket.on('queue_add', (rec) => {
      const empty = queueList.querySelector('.queue-empty');
      if(empty) empty.remove();
      renderQueueItem(rec);
      updateQueueCount(queueList.querySelectorAll('.queue-card').length);
    });

    socket.on('queue_remove', ({chatId}) => {
      const el = document.getElementById(`q-${chatId}`);
      if(el) {
        el.style.opacity = '0';
        el.style.transform = 'translateX(-10px)';
        setTimeout(() => {
          el.remove();
          const count = queueList.querySelectorAll('.queue-card').length;
          updateQueueCount(count);
          if(count === 0) {
            queueList.innerHTML = `<div class="queue-empty">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
              </svg>
              Sin clientes en espera
            </div>`;
          }
        }, 200);
      }
    });

    /* ---- Chats activos: reconexi칩n ---- */
    socket.on('active_chats', (chats) => {
      chats.forEach(({ chatId, transcript, payload, noTimeout }) => {
        activeChatsMap.set(chatId, { transcript: transcript || [], payload, noTimeout: !!noTimeout });
        renderActiveChatCard(chatId, payload);
      });
      updateActiveCount();
      if (chats.length > 0 && !currentChatId) selectChat(chats[0].chatId);
    });

    /* ---- Asignado nuevo ---- */
    socket.on('assigned', ({ chatId, transcript, payload }) => {
      activeChatsMap.set(chatId, { transcript: transcript || [], payload });
      renderActiveChatCard(chatId, payload);
      updateActiveCount();
      selectChat(chatId);
    });

    /* ---- Chat finalizado (por timeout, user disconnect, etc) ---- */
    socket.on('chat_ended', ({ chatId, reason }) => {
      activeChatsMap.delete(chatId);
      const card = document.getElementById('ac-' + chatId);
      if (card) { card.style.opacity = '0'; setTimeout(() => card.remove(), 200); }
      updateActiveCount();
      if (currentChatId === chatId) {
        currentChatId = null;
        const remaining = Array.from(activeChatsMap.keys());
        if (remaining.length > 0) { selectChat(remaining[0]); }
        else { activeChat.style.display = 'none'; emptyState.style.display = 'flex'; }
      }
    });

    /* ---- Mensajes entrantes ---- */
    socket.on('chat_message', (msg) => {
      const data = activeChatsMap.get(msg.chatId);
      if (data) { data.transcript.push(msg); }
      if (msg.chatId === currentChatId) {
        renderMessage(msg);
        scrollToBottom();
      }
    });

    /* ---- Helpers UI ---- */
    function updateQueueCount(n) { queueCount.textContent = n; }
    function updateActiveCount() { activeCountEl.textContent = activeChatsMap.size; }

    function renderActiveChatCard(chatId, payload) {
      const existing = document.getElementById('ac-' + chatId);
      if (existing) existing.remove();
      const div = document.createElement('div');
      div.className = 'active-chat-card';
      div.id = 'ac-' + chatId;
      div.innerHTML = '<span class="active-chat-dot"></span><div class="active-chat-info"><div class="active-chat-id">' + chatId.slice(-8) + '</div><div class="active-chat-reason">' + getReasonText(payload) + '</div></div>';
      div.addEventListener('click', () => selectChat(chatId));
      activeList.appendChild(div);
    }

    function selectChat(chatId) {
      const data = activeChatsMap.get(chatId);
      if (!data) return;
      document.querySelectorAll('.active-chat-card.selected').forEach(el => el.classList.remove('selected'));
      const card = document.getElementById('ac-' + chatId);
      if (card) card.classList.add('selected');
      currentChatId = chatId;
      emptyState.style.display = 'none';
      activeChat.style.display = 'flex';
      chatTitle.innerText = chatId.slice(-8);
      renderCaseInfo(data.payload);
      // Sincronizar toggle de timeout
      document.getElementById('chatTimeoutToggle').checked = !!data.noTimeout;
      thread.innerHTML = '';
      (data.transcript || []).forEach(renderMessage);
      scrollToBottom();
      input.focus();
      closeSidebar();
    }

    function renderQueueItem(rec) {
      const div = document.createElement('div');
      div.className = 'queue-card';
      div.id = `q-${rec.chatId}`;
      div.innerHTML = `
        <div class="q-header">
          <span class="q-time">Hace un momento</span>
          <span class="q-id">${rec.chatId.slice(-6)}</span>
        </div>
        <div class="q-reason">${getReasonText(rec.payload)}</div>
        <button class="btn-take">Tomar Caso</button>
      `;
      div.querySelector('.btn-take').addEventListener('click', () => {
        takeChat(rec.chatId);
      });
      queueList.appendChild(div);
    }

    function renderMessage(msg) {
      const row = document.createElement('div');
      row.className = `msg-row ${msg.who}`;
      const bubble = document.createElement('div');
      bubble.className = 'msg-bubble';
      let content = msg.text || '';
      if(msg.type === 'image') {
        content = `<a href="${msg.url}" target="_blank"><img src="${msg.url}" class="msg-img"></a>`;
        if(msg.text) content += `<div>${msg.text}</div>`;
      }
      const dateVal = msg.ts || msg.timestamp;
      const time = dateVal ? new Date(dateVal).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) : '';
      bubble.innerHTML = `${content}<span class="msg-meta">${time}</span>`;
      row.appendChild(bubble);
      thread.appendChild(row);
    }

    function renderCaseInfo(p) {
      caseDetails.style.display = 'none';
      caseDetails.innerHTML = '';
      if(!p) return;
      let items = '';
      if(p.categoria) {
        items += makeItem('Categor칤a', p.categoria);
        items += makeItem('Direcci칩n', p.direccion);
        items += makeItem('Descripci칩n', p.descripcion);
      } else if(p.propform) {
        items += makeItem('Operaci칩n', `${p.propform.op} ${p.propform.tipo}`);
        items += makeItem('Zona', p.propform.city || p.propform.direccion);
        items += makeItem('Presupuesto', `${p.propform.moneda||'$'} ${p.propform.presupuesto||'-'}`);
        items += makeItem('Detalles', `${p.propform.dorm||0} Dorm / ${p.propform.banos||0} Ba침os`);
      } else if(p.indice) {
        items += makeItem('칈ndice', p.indice);
        items += makeItem('C치lculo', p.calculo);
      } else if(p.motivo) {
        items += makeItem('Motivo', p.motivo);
      }
      let photosHtml = '';
      if(p.fotos && p.fotos.length) {
        photosHtml = `<div class="case-photos">${p.fotos.map(url => `<a href="${url}" target="_blank"><img src="${url}" class="thumb"></a>`).join('')}</div>`;
      }
      if(items) {
        caseDetails.innerHTML = `<div class="case-grid">${items}</div>${photosHtml}`;
        caseDetails.style.display = 'block';
      }
    }

    function makeItem(label, val) {
      if(!val) return '';
      return `<div class="case-item"><strong>${label}</strong><span>${val}</span></div>`;
    }

    function getReasonText(p) {
      if(!p) return 'Consulta General';
      if(p.categoria) return `游 ${p.categoria}`;
      if(p.propform) return `游 ${p.propform.op} ${p.propform.tipo}`;
      if(p.indice) return `游늳 ${p.indice}`;
      return p.motivo || 'Consulta';
    }

    function scrollToBottom() {
      setTimeout(() => { thread.scrollTop = thread.scrollHeight; }, 50);
    }

    function takeChat(chatId) {
      socket.emit('assign', { chatId });
      closeSidebar();
    }

    const sendMsg = () => {
      const text = input.value.trim();
      if(!text || !currentChatId) return;
      socket.emit('agent_message', { chatId: currentChatId, text });
      input.value = '';
      input.focus();
    };

    document.getElementById('sendBtn').addEventListener('click', sendMsg);
    input.addEventListener('keypress', (e) => { if(e.key === 'Enter') sendMsg(); });

    // File attachment
    const attachBtn = document.getElementById('attachBtn');
    const fileInput = document.getElementById('fileInput');
    attachBtn.addEventListener('click', () => fileInput.click());
    fileInput.addEventListener('change', () => {
      const files = Array.from(fileInput.files || []);
      if (!files.length || !currentChatId) return;
      files.forEach((file) => {
        if (file.type.startsWith('image/')) {
          const reader = new FileReader();
          reader.onload = () => {
            const dataUrl = reader.result;
            const row = document.createElement('div');
            row.className = 'msg-row agent';
            const bubble = document.createElement('div');
            bubble.className = 'msg-bubble';
            bubble.innerHTML = '<img src="' + dataUrl + '" class="msg-img"><span class="msg-meta">' + new Date().toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'}) + '</span>';
            row.appendChild(bubble);
            thread.appendChild(row);
            scrollToBottom();
            socket.emit('agent_image', { chatId: currentChatId, name: file.name, type: file.type, data: dataUrl });
          };
          reader.readAsDataURL(file);
        }
      });
      fileInput.value = '';
    });

    // Toggle timeout por chat
    const chatTimeoutToggle = document.getElementById('chatTimeoutToggle');
    chatTimeoutToggle.addEventListener('change', () => {
      if (!currentChatId) return;
      socket.emit('toggle_timeout', { chatId: currentChatId, noTimeout: chatTimeoutToggle.checked });
      const data = activeChatsMap.get(currentChatId);
      if (data) data.noTimeout = chatTimeoutToggle.checked;
    });

    // Toggle timeout global
    const globalTimeoutToggle = document.getElementById('globalTimeoutToggle');
    globalTimeoutToggle.addEventListener('change', () => {
      socket.emit('toggle_timeout_global', { noTimeout: globalTimeoutToggle.checked });
      // Actualizar todos los chats locales
      for (const [, data] of activeChatsMap) data.noTimeout = globalTimeoutToggle.checked;
      // Sincronizar el toggle del chat actual
      chatTimeoutToggle.checked = globalTimeoutToggle.checked;
    });

    document.getElementById('finishBtn').addEventListener('click', () => {
      if(!currentChatId) return;
      if(confirm('쮽inalizar esta conversaci칩n?')) {
        socket.emit('finish', { chatId: currentChatId });
        // Limpiar de active chats
        activeChatsMap.delete(currentChatId);
        const card = document.getElementById('ac-' + currentChatId);
        if (card) card.remove();
        updateActiveCount();
        const remaining = Array.from(activeChatsMap.keys());
        if (remaining.length > 0) { selectChat(remaining[0]); }
        else { activeChat.style.display = 'none'; emptyState.style.display = 'flex'; currentChatId = null; }
      }
    });
  </script>
</body>
