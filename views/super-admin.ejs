        <thead>
          <tr>
            <th>Fecha</th>
            <th>ID Chat (Cliente)</th>
            <th>Tema / Motivo</th>
            <th>Duraci√≥n</th>
            <th>Estado</th>
            <th>Acci√≥n</th>
          </tr>
        </thead>
        <tbody id="tickets-body"></tbody>
      </table>
    </div>
  </div>

  <div class="modal-overlay" id="userModal">
    <div class="modal-box">
      <div class="modal-header">
        <h3 id="modalTitle">Nuevo Agente</h3>
        <button class="close-btn" onclick="closeModals()">&times;</button>
      </div>
      <form id="userForm">
        <input type="hidden" name="id" id="userId">
        <div class="form-group">
          <label>Nombre Completo</label>
          <input type="text" name="name" id="userName" required placeholder="Ej: Juan Perez">
        </div>
        <div class="form-group">
          <label>Usuario (Login)</label>
          <input type="text" name="username" id="userUser" required placeholder="juanp">
        </div>
        <div class="form-group">
          <label>Contrase√±a <small id="passHint" style="color:var(--accent); font-weight:normal">(Dejar en blanco para no cambiar)</small></label>
          <input type="password" name="password" id="userPass" placeholder="******">
        </div>
        <div class="form-group">
          <label>Rol</label>
          <select name="role" id="userRole">
            <option value="agent">Agente</option>
            <option value="superadmin">Super Admin</option>
          </select>
        </div>
        <div class="modal-actions">
          <button type="button" class="btn-cancel" onclick="closeModals()">Cancelar</button>
          <button type="submit" class="btn-submit">Guardar Cambios</button>
        </div>
      </form>
    </div>
  </div>

  <div class="modal-overlay" id="chatModal">
    <div class="modal-box large">
      <div class="modal-header">
        <div>
          <h3 id="chatModalTitle" style="margin:0; font-size:1.1rem">Detalle del Chat</h3>
          <div id="chatRatingDisplay"></div>
        </div>
        <button class="close-btn" onclick="closeModals()">&times;</button>
      </div>
      
      <div class="chat-scroll" id="chat-content"></div>
      <div class="modal-actions">
        <button type="button" class="btn-cancel" onclick="closeModals()">Cerrar</button>
      </div>
    </div>
  </div>

  <script>
    // Variables globales
    let categoryChartInstance = null;
    let trendChartInstance = null;
    let currentMode = 'create';

    document.addEventListener('DOMContentLoaded', loadDashboardStats);

    // --- CARGAR DASHBOARD ---
    async function loadDashboardStats() {
      try {
        const res = await fetch('/api/stats');
        const data = await res.json();
        
        animateValue('kpi-today', 0, data.ticketsToday, 500);
        animateValue('kpi-month', 0, data.ticketsMonth, 500);
        animateValue('kpi-msgs', 0, data.totalMsgs, 500);
        document.getElementById('kpi-agents').innerText = data.agentsCount;

        renderCategoryChart(data.categories || []);
        renderTrendChart(data.trend || { labels: [], data: [] }); 
      } catch (e) { console.error("Error cargando stats", e); }
    }

    function animateValue(id, start, end, duration) {
      if (start === end) return;
      const range = end - start;
      const obj = document.getElementById(id);
      let current = start;
      const increment = end > start ? 1 : -1;
      const stepTime = Math.abs(Math.floor(duration / range));
      const timer = setInterval(() => {
        current += increment;
        obj.innerHTML = current;
        if (current == end) clearInterval(timer);
      }, stepTime);
    }

    function renderCategoryChart(categories) {
      const ctx = document.getElementById('categoryChart').getContext('2d');
      if (categoryChartInstance) categoryChartInstance.destroy();

      categoryChartInstance = new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: categories.map(c => c.topic),
          datasets: [{
            data: categories.map(c => c.count),
            backgroundColor: ['#22d3ee', '#818cf8', '#34d399', '#f472b6', '#fbbf24', '#94a3b8'],
            borderWidth: 0,
            hoverOffset: 10
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { position: 'right', labels: { color: '#94a3b8', font: {size: 11} } } }
        }
      });
    }

    function renderTrendChart(trendData) {
      const ctx = document.getElementById('trendChart').getContext('2d');
      if (trendChartInstance) trendChartInstance.destroy();

      const gradient = ctx.createLinearGradient(0, 0, 0, 400);
      gradient.addColorStop(0, 'rgba(34, 211, 238, 0.4)');
      gradient.addColorStop(1, 'rgba(34, 211, 238, 0)');

      trendChartInstance = new Chart(ctx, {
        type: 'line',
        data: {
          labels: trendData.labels,
          datasets: [{
            label: 'Chats Atendidos',
            data: trendData.data,
            borderColor: '#22d3ee',
            backgroundColor: gradient,
            fill: true,
            tension: 0.4,
            pointBackgroundColor: '#fff',
            pointRadius: 4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: {
            x: { grid: { display: false }, ticks: { color: '#94a3b8' } },
            y: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#94a3b8', stepSize: 1 } }
          }
        }
      });
    }

    // --- NAVEGACI√ìN ---
    function setActive(el) {
      document.querySelectorAll('.agent-item').forEach(e => e.classList.remove('active'));
      el.classList.add('active');
    }

    function showDashboard(el) {
      if(el) setActive(el);
      document.getElementById('view-dashboard').style.display = 'grid';
      document.getElementById('view-history').style.display = 'none';
      document.getElementById('page-title').innerText = 'Dashboard General';
      loadDashboardStats();
    }

    async function loadHistory(id, name, el) {
      setActive(el);
      document.getElementById('view-dashboard').style.display = 'none';
      document.getElementById('view-history').style.display = 'block';
      document.getElementById('page-title').innerText = `Historial de: ${name}`;

      const res = await fetch(`/api/agent-history/${id}`);
      const tickets = await res.json();
      const tbody = document.getElementById('tickets-body');
      tbody.innerHTML = '';

      if (tickets.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" style="text-align:center; padding:30px; color:#94a3b8;">Este agente a√∫n no ha atendido chats.</td></tr>';
        return;
      }

      tickets.forEach(t => {
        const start = new Date(t.start_ts);
        const end = t.end_ts ? new Date(t.end_ts) : null;
        const duration = end ? Math.round((end - start)/60000) + ' min' : 'En curso';
        const badgeStatus = t.status === 'closed' ? 'closed' : 'open';
        const statusText = t.status === 'closed' ? 'Cerrado' : 'üü¢ Activo';

        tbody.innerHTML += `
          <tr>
            <td>${start.toLocaleDateString()} ${start.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'})}</td>
            <td style="font-weight:bold; color:var(--accent)">${t.chat_id}</td>
            <td><span class="badge topic">${t.topic || 'General'}</span></td>
            <td>${duration}</td>
            <td><span class="badge ${badgeStatus}">${statusText}</span></td>
            <td><button class="btn-view" onclick="viewChat('${t.chat_id}', '${t.topic || 'Chat'}')">Ver Chat</button></td>
          </tr>
        `;
      });
    }

    // --- MODALES ---
    function openModal(mode, id, name, username, role) {
      currentMode = mode;
      document.getElementById('userModal').style.display = 'flex';
      
      const title = document.getElementById('modalTitle');
      const passHint = document.getElementById('passHint');
      const passInput = document.getElementById('userPass');

      if (mode === 'edit') {
        title.innerText = `Editar a ${name}`;
        document.getElementById('userId').value = id;
        document.getElementById('userName').value = name;
        document.getElementById('userUser').value = username;
        document.getElementById('userRole').value = role;
        passHint.style.display = 'inline'; 
        passInput.required = false;
      } else {
        title.innerText = 'Crear Nuevo Agente';
        document.getElementById('userForm').reset();
        passHint.style.display = 'none';
        passInput.required = true;
      }
    }

    function closeModals() {
      document.querySelectorAll('.modal-overlay').forEach(e => e.style.display = 'none');
    }

    document.getElementById('userForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());
      
      let url = '/api/agents';
      let method = 'POST';

      if (currentMode === 'edit') {
        url = `/api/agents/${data.id}`;
        method = 'PUT';
      }

      try {
        const res = await fetch(url, {
          method: method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          location.reload();
        } else {
          const err = await res.json();
          alert('Error: ' + (err.error || 'No se pudo guardar'));
        }
      } catch (err) {
        console.error(err);
        alert('Error de conexi√≥n');
      }
    });

    async function deleteAgent(id, ev) {
      ev.stopPropagation();
      if(!confirm('üö® ¬øEst√°s seguro de ELIMINAR a este agente?\nEsta acci√≥n no se puede deshacer.')) return;
      const res = await fetch(`/api/agents/${id}`, { method: 'DELETE' });
      if(res.ok) location.reload();
      else alert('Error al eliminar');
    }

    async function viewChat(chatId, topic) {
      document.getElementById('chatModal').style.display = 'flex';
      document.getElementById('chatModalTitle').innerText = `Chat: ${topic} (${chatId})`;
      
      const ratingContainer = document.getElementById('chatRatingDisplay');
      ratingContainer.innerHTML = ''; 
      const container = document.getElementById('chat-content');
      container.innerHTML = '<div style="text-align:center; color:#888; padding:20px">Cargando historial...</div>';
      
      try {
        const res = await fetch(`/api/chat-transcript/${chatId}`);
        const msgs = await res.json();
        container.innerHTML = '';

        if (msgs.length === 0) {
          container.innerHTML = '<div style="text-align:center; color:#888; padding:20px">No hay mensajes registrados.</div>';
          return;
        }

        // L√≥gica de Rating
        let ratingHtml = '<span class="no-rating">Sin calificaci√≥n</span>';
        const ratingMsg = msgs.find(m => m.who === 'system' && m.text && m.text.startsWith('Rating:'));
        
        if (ratingMsg) {
          const text = ratingMsg.text; 
          const starsMatch = text.match(/(\d+)/);
          
          if (starsMatch) {
            const numStars = parseInt(starsMatch[1]);
            const starsStr = '‚òÖ'.repeat(numStars) + '‚òÜ'.repeat(5 - numStars);
            ratingHtml = `<div class="chat-rating"><span>Calificaci√≥n:</span> <span class="stars">${starsStr}</span></div>`;
          } else if (text.includes('omitido')) {
            ratingHtml = '<div class="chat-rating"><span class="no-rating">Calificaci√≥n omitida</span></div>';
          }
        }
        ratingContainer.innerHTML = ratingHtml;

        // Render mensajes
        msgs.forEach(m => {
          const div = document.createElement('div');
          div.className = `msg msg-${m.who === 'user' ? 'user' : 'agent'}`;
          
          let content = m.text || '';
          if (m.type === 'image') {
            content = `<a href="${m.url}" target="_blank"><img src="${m.url}" style="max-width:200px; border-radius:8px"></a>`;
          }

          const time = new Date(m.timestamp).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
          div.innerHTML = `${content}<span class="msg-meta">${time}</span>`;
          container.appendChild(div);
        });
        
        setTimeout(() => container.scrollTop = container.scrollHeight, 100);

      } catch (e) {
        console.error(e);
        container.innerHTML = '<div style="text-align:center; color:red">Error cargando chat</div>';
      }
    }
  </script>
