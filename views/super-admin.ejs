    <div id="view-dashboard" class="dashboard-view">
      <!-- WhatsApp Status Card -->
      <div class="card wide" id="wa-status-card">
        <div class="kpi-title">
          <span>Estado WhatsApp</span>
          <button id="wa-refresh-btn" class="btn-wa-action" title="Actualizar estado">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
