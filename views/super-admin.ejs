<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Super Admin | BR-Group</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link rel="stylesheet" href="/css/design-system.css">
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/components.css">
  <link rel="stylesheet" href="/css/chat.css">
  <link rel="stylesheet" href="/css/layout-super-admin.css">
  <script>
    (function(){
      var t = localStorage.getItem('br-theme');
      if (t === 'dark' || (!t && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    })();
  </script>
</head>
<body>
  <!-- Mobile Menu Button -->
  <button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Abrir menú">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="3" y1="6" x2="21" y2="6"/>
      <line x1="3" y1="12" x2="21" y2="12"/>
      <line x1="3" y1="18" x2="21" y2="18"/>
    </svg>
  </button>

  <!-- Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>

  <div class="sidebar" id="sidebar">
    <div class="logo">
      <div class="logo-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
      </div>
      <div class="logo-text">BR<span>.</span>Admin</div>
    </div>

    <button class="add-btn" id="btn-new-agent">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/>
      </svg>
      Nuevo Agente
    </button>

    <div class="nav-label">Panel Principal</div>
    <div class="agent-list" id="agent-list-container">
      <div class="agent-item active" id="dashboard-item">
        <div>
          <div class="agent-name">Dashboard General</div>
          <div class="agent-role"><span class="role-badge admin">Estadisticas</span></div>
        </div>
      </div>

      <div class="nav-label" style="padding-left:4px; margin-top:8px">Agentes</div>
      <% agents.forEach(a => { %>
        <div class="agent-item" data-agent-id="<%= a.id %>" data-agent-name="<%= a.name %>" data-agent-username="<%= a.username %>" data-agent-role="<%= a.role %>">
          <div>
            <div class="agent-name"><%= a.name %></div>
            <div class="agent-role">
              <span class="role-badge <%= a.role === 'superadmin' ? 'admin' : 'agent' %>">
                <%= a.role === 'superadmin' ? 'Admin' : 'Agente' %>
              </span>
            </div>
          </div>
          <div class="actions">
            <button class="icon-btn btn-edit" title="Editar">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </button>
            <% if(a.role !== 'superadmin') { %>
              <button class="icon-btn del btn-delete" title="Borrar">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                </svg>
              </button>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="sidebar-footer">
      <a href="/admin" class="sidebar-link">
        Ir al Chat Operativo
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
          <line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/>
        </svg>
      </a>
    </div>
  </div>

  <div class="main">
    <div class="topbar">
      <div class="page-header">
        <div class="page-title" id="page-title">Dashboard General</div>
        <div id="agent-stats-bar" class="agent-stats-bar" style="display:none">
          <div class="stat-pill">Total Chats: <strong id="stat-total">0</strong></div>
          <div class="stat-pill">Promedio: <strong id="stat-avg">0.0</strong> <span class="gold">★</span></div>
        </div>
      </div>

      <div class="topbar-actions">
        <button class="theme-toggle" id="themeToggle" aria-label="Cambiar tema">
          <svg class="icon-sun" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          <svg class="icon-moon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
        </button>
        <a href="/logout" class="logout-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/>
          </svg>
          Salir
        </a>
      </div>
    </div>

    <div id="view-dashboard" class="dashboard-view">
      <!-- WhatsApp Status Card -->
      <div class="card wide" id="wa-status-card">
        <div class="kpi-title">
          <span>Estado WhatsApp</span>
          <button id="wa-refresh-btn" class="btn-wa-action" title="Actualizar estado">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 4 23 10 17 10"/><path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Actualizar
          </button>
        </div>
        <div id="wa-status-container" style="display:flex; align-items:center; gap:24px; margin-top:8px;">
          <div id="wa-status-indicator" style="flex:1;">
            <div class="wa-status-badge initializing" id="wa-badge">
              <span class="wa-status-dot"></span>
              <span class="wa-status-text">Inicializando...</span>
            </div>
            <div id="wa-status-info" style="margin-top:12px; font-size:0.8rem; color:var(--text-muted);"></div>
          </div>
          <div id="wa-qr-container" style="display:none;">
            <img id="wa-qr-image" src="" alt="QR WhatsApp" style="width:160px; height:160px; display:block;">
          </div>
        </div>
      </div>

      <!-- Active Chats Live -->
      <div class="card wide" id="active-chats-card">
        <div class="kpi-title">
          <span>Chats Activos en Tiempo Real</span>
          <button id="refresh-active-btn" class="btn-wa-action" title="Actualizar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 4 23 10 17 10"/><path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
            </svg>
            Actualizar
          </button>
        </div>
        <div id="active-chats-list" style="margin-top:12px;"></div>
      </div>

      <div class="card">
        <div class="kpi-title">Clientes Hoy</div>
        <div class="kpi-value" id="kpi-today">...</div>
        <div class="kpi-desc">Tickets cerrados hoy</div>
      </div>
      <div class="card">
        <div class="kpi-title">Clientes Mes</div>
        <div class="kpi-value" id="kpi-month">...</div>
        <div class="kpi-desc">Tickets acumulados</div>
      </div>
      <div class="card">
        <div class="kpi-title">Mensajes Totales</div>
        <div class="kpi-value" id="kpi-msgs">...</div>
        <div class="kpi-desc">Interacciones Bot/User</div>
      </div>
      <div class="card">
        <div class="kpi-title">Agentes Activos</div>
        <div class="kpi-value" id="kpi-agents">...</div>
        <div class="kpi-desc">Usuarios registrados</div>
      </div>
      <div class="card wide tall">
        <div class="kpi-title">Motivos de Contacto (Top 5)</div>
        <div style="flex:1; position:relative;">
          <canvas id="categoryChart"></canvas>
        </div>
      </div>
      <div class="card wide tall">
        <div class="kpi-title">Actividad Reciente</div>
        <div style="flex:1; position:relative;">
          <canvas id="trendChart"></canvas>
        </div>
      </div>
    </div>

    <div id="view-history" class="history-view">
      <table id="tickets-table">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>ID Chat (Cliente)</th>
            <th>Tema / Motivo</th>
            <th>Duracion</th>
            <th>Estado</th>
            <th>Calificacion</th>
            <th>Accion</th>
          </tr>
        </thead>
        <tbody id="tickets-body"></tbody>
      </table>
    </div>
  </div>

  <!-- Modal: Usuario -->
  <div class="modal-overlay" id="userModal">
    <div class="modal-box">
      <div class="modal-header">
        <h3 id="modalTitle">Nuevo Agente</h3>
        <button class="close-btn close-modal-btn">&times;</button>
      </div>
      <form id="userForm">
        <input type="hidden" name="id" id="userId">
        <div class="form-group">
          <label>Nombre Completo</label>
          <input type="text" name="name" id="userName" required placeholder="Ej: Juan Perez">
        </div>
        <div class="form-group">
          <label>Usuario (Login)</label>
          <input type="text" name="username" id="userUser" required placeholder="juanp">
        </div>
        <div class="form-group">
          <label>Contrasena <small id="passHint">(Dejar en blanco para no cambiar)</small></label>
          <input type="password" name="password" id="userPass" placeholder="******">
        </div>
        <div class="form-group">
          <label>Rol</label>
          <select name="role" id="userRole">
            <option value="agent">Agente</option>
            <option value="superadmin">Super Admin</option>
          </select>
        </div>
        <div class="modal-actions">
          <button type="button" class="btn-cancel close-modal-btn">Cancelar</button>
          <button type="submit" class="btn-submit">Guardar Cambios</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal: Chat -->
  <div class="modal-overlay" id="chatModal">
    <div class="modal-box large">
      <div class="modal-header">
        <div>
          <h3 id="chatModalTitle" style="margin:0; font-size:1.2rem">Detalle del Chat</h3>
          <div id="chatRatingDisplay"></div>
        </div>
        <button class="close-btn close-modal-btn">&times;</button>
      </div>
      <div class="chat-scroll" id="chat-content"></div>
      <div class="modal-actions">
        <button type="button" class="btn-cancel close-modal-btn">Cerrar</button>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    window.onerror = function(msg, url, lineNo, columnNo, error) {
      console.error('Error global JS:', msg, 'en linea', lineNo);
      return false;
    };

    // Theme toggle with chart re-render
    document.getElementById('themeToggle').addEventListener('click', function() {
      var html = document.documentElement;
      var isDark = html.getAttribute('data-theme') === 'dark';
      if (isDark) {
        html.removeAttribute('data-theme');
        localStorage.setItem('br-theme', 'light');
      } else {
        html.setAttribute('data-theme', 'dark');
        localStorage.setItem('br-theme', 'dark');
      }
      // Re-render charts with new theme colors
      try { loadDashboardStats(); } catch(e) {}
    });

    function getThemeColors() {
      var isDark = document.documentElement.getAttribute('data-theme') === 'dark';
      return {
        accent: isDark ? '#818cf8' : '#6366f1',
        textMuted: isDark ? '#52525b' : '#94a3b8',
        textSecondary: isDark ? '#a1a1aa' : '#475569',
        gridColor: isDark ? 'rgba(255,255,255,0.05)' : 'rgba(0,0,0,0.05)',
        legendColor: isDark ? '#a1a1aa' : '#475569',
        pointBg: isDark ? '#fafafa' : '#ffffff'
      };
    }

    let categoryChartInstance = null, trendChartInstance = null, currentMode = 'create';
    let waStatusSocket = null;

    function escapeHtml(text) {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Mobile menu
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const sidebarEl = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    function openSidebar() {
      sidebarEl.classList.add('open');
      sidebarOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeSidebar() {
      sidebarEl.classList.remove('open');
      sidebarOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    mobileMenuBtn.addEventListener('click', openSidebar);
    sidebarOverlay.addEventListener('click', closeSidebar);

    document.addEventListener('DOMContentLoaded', () => {
      console.log('Super-admin cargado');
      attachEventListeners();
      try { loadDashboardStats(); } catch (e) { console.error('Error en loadDashboardStats:', e); }
      try { loadActiveChats(); } catch (e) { console.error('Error en loadActiveChats:', e); }
      try { initWaStatusSocket(); } catch (e) { console.error('Error en initWaStatusSocket:', e); }
      try { refreshWaStatus(); } catch (e) { console.error('Error en refreshWaStatus:', e); }
      // Auto-refresh active chats every 30s
      setInterval(() => { try { loadActiveChats(); } catch(e) {} }, 30000);
    });

    function attachEventListeners() {
      console.log('Adjuntando event listeners...');

      const btnNewAgent = document.getElementById('btn-new-agent');
      if (btnNewAgent) {
        btnNewAgent.addEventListener('click', (e) => {
          e.preventDefault();
          console.log('Click en Nuevo Agente');
          openModal('create');
        });
      }

      const dashboardItem = document.getElementById('dashboard-item');
      if (dashboardItem) {
        dashboardItem.addEventListener('click', () => {
          console.log('Click en Dashboard');
          showDashboard(dashboardItem);
        });
      }

      document.querySelectorAll('.agent-item[data-agent-id]').forEach(item => {
        const agentId = item.dataset.agentId;
        const agentName = item.dataset.agentName;
        const agentUsername = item.dataset.agentUsername;
        const agentRole = item.dataset.agentRole;

        item.addEventListener('click', (e) => {
          if (e.target.closest('.btn-edit') || e.target.closest('.btn-delete')) return;
          console.log('Click en agente:', agentName);
          loadHistory(agentId, agentName, item);
        });

        const btnEdit = item.querySelector('.btn-edit');
        if (btnEdit) {
          btnEdit.addEventListener('click', (e) => {
            e.stopPropagation();
            console.log('Editar agente:', agentName);
            openModal('edit', agentId, agentName, agentUsername, agentRole);
          });
        }

        const btnDelete = item.querySelector('.btn-delete');
        if (btnDelete) {
          btnDelete.addEventListener('click', (e) => {
            e.stopPropagation();
            console.log('Borrar agente:', agentId);
            deleteAgent(agentId, e);
          });
        }
      });

      document.querySelectorAll('.close-modal-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          closeModals();
        });
      });

      document.querySelectorAll('.modal-overlay').forEach(overlay => {
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) closeModals();
        });
      });

      const waRefreshBtn = document.getElementById('wa-refresh-btn');
      if (waRefreshBtn) {
        waRefreshBtn.addEventListener('click', () => refreshWaStatus());
      }

      const refreshActiveBtn = document.getElementById('refresh-active-btn');
      if (refreshActiveBtn) {
        refreshActiveBtn.addEventListener('click', () => loadActiveChats());
      }

      console.log('Event listeners adjuntados');
    }

    // WhatsApp STATUS
    let waStatusInterval = null;

    function initWaStatusSocket() {
      waStatusSocket = io('/wa-status');

      waStatusSocket.on('connect', () => {
        console.log('Conectado a wa-status');
        if (waStatusInterval) {
          clearInterval(waStatusInterval);
          waStatusInterval = null;
        }
      });

      waStatusSocket.on('wa_status', (data) => {
        console.log('Recibido wa_status:', data.status);
        updateWaStatusUI(data);
      });

      waStatusSocket.on('connect_error', (err) => {
        console.log('wa-status connection error:', err.message);
        startPollingFallback();
      });

      waStatusSocket.on('disconnect', () => {
        console.log('Desconectado de wa-status');
        startPollingFallback();
      });
    }

    function startPollingFallback() {
      if (waStatusInterval) return;
      console.log('Iniciando polling de estado WhatsApp');
      waStatusInterval = setInterval(refreshWaStatus, 5000);
    }

    async function refreshWaStatus() {
      try {
        const res = await fetch('/api/wa-status');
        const data = await res.json();
        console.log('API wa-status:', data.status);
        updateWaStatusUI(data);
      } catch (e) {
        console.error('Error fetching wa-status:', e);
      }
    }

    function updateWaStatusUI(data) {
      console.log('updateWaStatusUI:', data);
      const badge = document.getElementById('wa-badge');
      const textEl = badge.querySelector('.wa-status-text');
      const infoEl = document.getElementById('wa-status-info');
      const qrContainer = document.getElementById('wa-qr-container');
      const qrImage = document.getElementById('wa-qr-image');

      if (!badge || !textEl) {
        console.error('Elementos de UI no encontrados');
        return;
      }

      badge.className = 'wa-status-badge';

      const statusLabels = {
        'initializing': 'Inicializando...',
        'qr_pending': 'Esperando escaneo QR',
        'authenticated': 'Autenticado, conectando...',
        'ready': 'Conectado',
        'disconnected': 'Desconectado',
        'reconnecting': 'Reconectando...',
        'auth_failure': 'Error de autenticacion',
        'error': 'Error'
      };

      const status = data.status || 'initializing';
      badge.classList.add(status);
      textEl.textContent = statusLabels[status] || status;

      if (data.ts) {
        const date = new Date(data.ts);
        infoEl.textContent = 'Ultima actualizacion: ' + date.toLocaleString();
      }

      if (status === 'qr_pending' && (data.qrDataUrl || data.qr)) {
        qrContainer.style.display = 'block';
        if (data.qrDataUrl) {
          qrImage.src = data.qrDataUrl;
        } else if (data.qr) {
          generateQRDataUrl(data.qr).then(url => { qrImage.src = url; });
        }
      } else {
        qrContainer.style.display = 'none';
      }

      if (status === 'disconnected' && data.reason) {
        infoEl.textContent += ' - Razon: ' + data.reason;
      }
      if (status === 'auth_failure' && data.message) {
        infoEl.textContent += ' - ' + data.message;
      }
    }

    async function generateQRDataUrl(qrString) {
      try {
        const res = await fetch('/api/wa-status');
        const data = await res.json();
        return data.qrDataUrl || '';
      } catch { return ''; }
    }

    async function loadDashboardStats() {
      try {
        const res = await fetch('/api/stats');
        const data = await res.json();
        animateValue('kpi-today', 0, data.ticketsToday, 500);
        animateValue('kpi-month', 0, data.ticketsMonth, 500);
        animateValue('kpi-msgs', 0, data.totalMsgs, 500);
        document.getElementById('kpi-agents').innerText = data.agentsCount;
        renderCategoryChart(data.categories || []);
        renderTrendChart(data.trend || { labels: [], data: [] });
      } catch (e) { console.error("Error cargando stats", e); }
    }

    async function loadActiveChats() {
      try {
        const res = await fetch('/api/active-chats');
        const chats = await res.json();
        const container = document.getElementById('active-chats-list');
        if (!chats.length) {
          container.innerHTML = '<div class="active-chats-empty">No hay chats activos en este momento</div>';
          return;
        }
        container.innerHTML = '';
        chats.forEach(c => {
          const ago = Math.round((Date.now() - c.lastActivity) / 60000);
          const agoText = ago < 1 ? 'ahora' : ago + ' min';
          const topic = getActiveReasonText(c.payload);
          const div = document.createElement('div');
          div.className = 'active-chat-row';
          div.innerHTML = '<span class="live-dot"></span>'
            + '<span class="ac-agent">' + escapeHtml(c.agentName) + '</span>'
            + '<span class="ac-client">' + escapeHtml(c.chatId.slice(-8)) + '</span>'
            + '<span class="ac-topic">' + escapeHtml(topic) + '</span>'
            + '<span class="ac-time">Hace ' + agoText + '</span>'
            + (c.agentConnected ? '' : '<span class="badge closed">Desconectado</span>');
          container.appendChild(div);
        });
      } catch (e) { console.error('Error cargando chats activos:', e); }
    }

    function getActiveReasonText(p) {
      if (!p) return 'Consulta General';
      if (p.categoria) return p.categoria;
      if (p.propform) return (p.propform.op || '') + ' ' + (p.propform.tipo || '');
      if (p.indice) return p.indice;
      return p.motivo || 'Consulta';
    }

    function animateValue(id, start, end, duration) {
      if (start === end) return;
      const range = end - start;
      const obj = document.getElementById(id);
      let current = start;
      const increment = end > start ? 1 : -1;
      const stepTime = Math.abs(Math.floor(duration / range));
      const timer = setInterval(() => {
        current += increment;
        obj.innerHTML = current;
        if (current == end) clearInterval(timer);
      }, stepTime);
    }

    // Charts — theme-aware colors
    function renderCategoryChart(categories) {
      const colors = getThemeColors();
      const ctx = document.getElementById('categoryChart').getContext('2d');
      if (categoryChartInstance) categoryChartInstance.destroy();
      categoryChartInstance = new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: categories.map(c => c.topic),
          datasets: [{
            data: categories.map(c => c.count),
            backgroundColor: ['#6366f1', '#a78bfa', '#22c55e', '#f472b6', '#f59e0b', '#3b82f6'],
            borderWidth: 0,
            hoverOffset: 10
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'right',
              labels: { color: colors.legendColor, font: { size: 11, family: 'Inter' }, padding: 16 }
            }
          }
        }
      });
    }

    function renderTrendChart(trendData) {
      const colors = getThemeColors();
      const ctx = document.getElementById('trendChart').getContext('2d');
      if (trendChartInstance) trendChartInstance.destroy();
      const gradient = ctx.createLinearGradient(0, 0, 0, 400);
      gradient.addColorStop(0, colors.accent + '66');
      gradient.addColorStop(1, colors.accent + '00');
      trendChartInstance = new Chart(ctx, {
        type: 'line',
        data: {
          labels: trendData.labels,
          datasets: [{
            label: 'Chats Atendidos',
            data: trendData.data,
            borderColor: colors.accent,
            backgroundColor: gradient,
            fill: true,
            tension: 0.4,
            pointBackgroundColor: colors.pointBg,
            pointRadius: 4,
            pointBorderColor: colors.accent,
            pointBorderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: { legend: { display: false } },
          scales: {
            x: { grid: { display: false }, ticks: { color: colors.textMuted, font: { family: 'Inter' } } },
            y: { grid: { color: colors.gridColor }, ticks: { color: colors.textMuted, stepSize: 1, font: { family: 'Inter' } } }
          }
        }
      });
    }

    // Navigation
    function setActive(el) {
      document.querySelectorAll('.agent-item').forEach(e => e.classList.remove('active'));
      el.classList.add('active');
    }

    function showDashboard(el) {
      if(el) setActive(el);
      closeSidebar();
      document.getElementById('view-dashboard').style.display = 'grid';
      document.getElementById('view-history').style.display = 'none';
      document.getElementById('agent-stats-bar').style.display = 'none';
      document.getElementById('page-title').innerText = 'Dashboard General';
      loadDashboardStats();
      loadActiveChats();
    }

    // History
    async function loadHistory(id, name, el) {
      console.log('loadHistory llamado:', { id, name });
      try {
        setActive(el);
        closeSidebar();
        document.getElementById('view-dashboard').style.display = 'none';
        document.getElementById('view-history').style.display = 'block';
        document.getElementById('page-title').innerText = `Historial: ${name}`;

        const statsBar = document.getElementById('agent-stats-bar');
        statsBar.style.display = 'flex';

        const res = await fetch(`/api/agent-history/${id}`);
        const tickets = await res.json();
        const tbody = document.getElementById('tickets-body');
        tbody.innerHTML = '';

        let totalStars = 0;
        let ratedCount = 0;

        if (tickets.length === 0) {
          tbody.innerHTML = '<tr><td colspan="7" style="text-align:center; padding:40px; color:var(--text-muted);">Este agente aun no ha atendido chats.</td></tr>';
          document.getElementById('stat-total').innerText = '0';
          document.getElementById('stat-avg').innerText = '-';
          return;
        }

        tickets.forEach(t => {
          const start = new Date(t.start_ts);
          const end = t.end_ts ? new Date(t.end_ts) : null;
          const duration = end ? Math.round((end - start)/60000) + ' min' : 'En curso';
          const badgeStatus = t.status === 'closed' ? 'closed' : 'open';
          const statusText = t.status === 'closed' ? 'Cerrado' : 'Activo';

          let starsHtml = '<span class="rating-none">-</span>';
          if (t.rating) {
            totalStars += t.rating;
            ratedCount++;
            const filled = '★'.repeat(t.rating);
            const empty = '☆'.repeat(5 - t.rating);
            starsHtml = `<span class="rating-stars">${filled}${empty}</span>`;
          }

          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${start.toLocaleDateString()} ${start.toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'})}</td>
            <td style="font-weight:600; color:var(--accent)">${escapeHtml(t.chat_id)}</td>
            <td><span class="badge topic">${escapeHtml(t.topic || 'General')}</span></td>
            <td>${duration}</td>
            <td><span class="badge ${badgeStatus}">${statusText}</span></td>
            <td>${starsHtml}</td>
            <td><button class="btn-view">Ver Chat</button></td>
          `;
          const btn = tr.querySelector('.btn-view');
          btn.addEventListener('click', () => {
            viewChat(t.chat_id, t.topic || 'Chat');
          });
          tbody.appendChild(tr);
        });

        document.getElementById('stat-total').innerText = tickets.length;
        document.getElementById('stat-avg').innerText = ratedCount > 0 ? (totalStars / ratedCount).toFixed(1) : '-';
      } catch (e) {
        console.error('Error en loadHistory:', e);
      }
    }

    // Agent CRUD
    function openModal(mode, id, name, username, role) {
      console.log('openModal llamado:', { mode, id, name, username, role });
      try {
        currentMode = mode;
        document.getElementById('userModal').style.display = 'flex';
        const title = document.getElementById('modalTitle');
        const passHint = document.getElementById('passHint');
        const passInput = document.getElementById('userPass');
        if (mode === 'edit') {
          title.innerText = `Editar a ${name}`;
          document.getElementById('userId').value = id;
          document.getElementById('userName').value = name;
          document.getElementById('userUser').value = username;
          document.getElementById('userRole').value = role;
          passHint.style.display = 'inline';
          passInput.required = false;
        } else {
          title.innerText = 'Crear Nuevo Agente';
          document.getElementById('userForm').reset();
          passHint.style.display = 'none';
          passInput.required = true;
        }
      } catch (e) {
        console.error('Error en openModal:', e);
      }
    }

    function closeModals() {
      document.querySelectorAll('.modal-overlay').forEach(e => e.style.display = 'none');
    }

    document.getElementById('userForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      console.log('Enviando formulario de agente');
      const data = Object.fromEntries(new FormData(e.target));
      let url = '/api/agents', method = 'POST';
      if (currentMode === 'edit') { url = `/api/agents/${data.id}`; method = 'PUT'; }
      try {
        const res = await fetch(url, { method, headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(data) });
        if (res.ok) location.reload();
        else { const err = await res.json(); alert('Error: ' + (err.error || 'No se pudo guardar')); }
      } catch (err) { console.error('Error de conexion:', err); alert('Error de conexion: ' + err.message); }
    });

    async function deleteAgent(id) {
      console.log('deleteAgent llamado:', id);
      if(!confirm('¿Estas seguro de ELIMINAR a este agente?')) return;
      try {
        const res = await fetch(`/api/agents/${id}`, { method: 'DELETE' });
        if(res.ok) location.reload();
        else { const err = await res.json(); alert('Error al eliminar: ' + (err.error || res.statusText)); }
      } catch (e) { console.error('Error eliminando:', e); alert('Error de conexion'); }
    }

    // View Chat
    async function viewChat(chatId, topic) {
      console.log('viewChat llamado:', { chatId, topic });
      document.getElementById('chatModal').style.display = 'flex';
      document.getElementById('chatModalTitle').innerText = `Chat: ${topic} (${chatId})`;
      const ratingContainer = document.getElementById('chatRatingDisplay');
      ratingContainer.innerHTML = '';
      const container = document.getElementById('chat-content');
      container.innerHTML = '<div style="text-align:center; color:var(--text-muted); padding:30px">Cargando historial...</div>';

      try {
        const res = await fetch(`/api/chat-transcript/${chatId}`);
        const msgs = await res.json();
        container.innerHTML = '';

        if (msgs.length === 0) {
          container.innerHTML = '<div style="text-align:center; color:var(--text-muted); padding:30px">No hay mensajes registrados.</div>';
          return;
        }

        const ratingMsg = msgs.find(m => m.who === 'system' && m.text && m.text.startsWith('Rating:'));
        if (ratingMsg) {
          const match = ratingMsg.text.match(/(\d+)/);
          if (match) {
            const num = parseInt(match[1]);
            ratingContainer.innerHTML = `<div class="chat-rating"><span>Calificacion:</span> <span class="stars">${'★'.repeat(num)}${'☆'.repeat(5-num)}</span></div>`;
          } else if (ratingMsg.text.includes('omitido')) {
            ratingContainer.innerHTML = `<div class="chat-rating"><span class="no-rating">Calificacion omitida</span></div>`;
          }
        }

        msgs.forEach(m => {
          const div = document.createElement('div');
          div.className = `msg msg-${m.who === 'user' ? 'user' : 'agent'}`;
          let content = m.text || '';
          if (m.type === 'image') content = `<a href="${m.url}" target="_blank"><img src="${m.url}" style="max-width:200px; border-radius:8px"></a>`;
          const time = new Date(m.timestamp).toLocaleTimeString([], {hour:'2-digit', minute:'2-digit'});
          div.innerHTML = `${content}<span class="msg-meta">${time}</span>`;
          container.appendChild(div);
        });
        setTimeout(() => container.scrollTop = container.scrollHeight, 100);
      } catch (e) { console.error(e); }
    }
  </script>
