  <!-- Modal: Chat -->
  <div class="modal-overlay" id="chatModal">
    <div class="modal-box large">
      <div class="modal-header">
        <div>
          <h3 id="chatModalTitle" style="margin:0; font-size:1.2rem">Detalle del Chat</h3>
          <div id="chatRatingDisplay"></div>
        </div>
        <button class="close-btn close-modal-btn">&times;</button>
      </div>
      <div class="chat-scroll" id="chat-content"></div>
      <div class="modal-actions">
        <button type="button" class="btn-cancel close-modal-btn">Cerrar</button>
      </div>
